@model LuxuryLife.Models.Tour

@{
    ViewData["Title"] = "Chi tiết Tour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container {
        width: 1370px;
    }
    /* Tour Detail Section */
    .tour-detail-section {
        padding: 40px 0;
        background: linear-gradient(to bottom, #e6f3ff, #ffffff);
    }

    /* Tour Header */
    .tour-header {
        text-align: center;
        margin-bottom: 30px;
        padding: 30px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .tour-title {
        font-size: 8.5rem;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .tour-price {
        font-size: 3.8rem;
        color: #e74c3c;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .divider {
        width: 380px;
        height: 6px;
        background-color: #3498db;
        margin: 20px auto;
        border: none;
    }

    /* Tour Content */
    .tour-content {
        display: flex;
        gap: 30px;
        margin-bottom: 40px;
        align-items: flex-start;
    }

    .tour-image {
        width: 70%;
    }

        .tour-image img {
            width: 100%;
            height: 500px;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .tour-image img:hover {
                transform: scale(1.02);
            }

    .tour-body {
        height: 500px;
        flex: 1;
        font-size: 1.1rem;
        color: #34495e;
        line-height: 1.8;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

        .tour-body h2 {
            font-size: 2.8rem;
            color: #2c3e50;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .tour-body p {
            font-size: 2rem;
            color: #555;
        }

    /* Section Container */
    .section-container {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 2.8rem;
        color: #2c3e50;
        margin-bottom: 20px;
        border-bottom: 5px solid #3498db;
        padding-bottom: 10px;
        font-weight: 600;
        position: relative;
    }

        .section-title::after {
            content: '';
            width: 150px;
            height: 9px;
            background-color: #e74c3c;
            position: absolute;
            bottom: -2px;
            left: 0;
        }

    /* Row and Column Layout */
    .row {
        display: flex;
        flex-wrap: wrap;
        margin: 0 -15px;
    }

    .col-md-6 {
        padding: 15px;
    }

    .col-md-4 {
        padding: 15px;
    }

        .col-md-6 img, .col-md-4 img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: opacity 0.3s ease;
        }

            .col-md-6 img:hover, .col-md-4 img:hover {
                opacity: 0.9;
            }

    /* Additional Images */
    .section-container .col-md-6 p {
        font-size: 1.5rem;
        color: #666;
        text-align: center;
        margin-top: 10px;
    }

    /* Services */
    .section-container .col-md-4 {
        background-color: #f9f9f9;
        border-radius: 50px;
        padding: 20px;
        transition: transform 0.3s ease;
    }

        .section-container .col-md-4:hover {
            transform: translateY(-5px);
        }

        .section-container .col-md-4 strong {
            font-size: 2.2rem;
            color: #000;
            display: block;
            margin-bottom: 10px;
        }

        .section-container .col-md-4 p {
            font-size: 1.8rem;
            color: #000;
            margin-bottom: 10px;
        }

        .section-container .col-md-4 span {
            font-size: 2.1rem;
            color: #e74c3c;
            font-weight: bold;
        }

    /* Homestays */
    .section-container .col-md-6 ul {
        list-style: none;
        padding: 0;
        margin-top: 15px;
    }

        .section-container .col-md-6 ul li {
            font-size: 1.6rem;
            color: #34495e;
            margin-bottom: 10px;
        }

            .section-container .col-md-6 ul li strong {
                color: #2c3e50;
                font-weight: 600;
            }

    .section-container .col-md-6 img {
        height: 300px;
    }

    /* Reviews */
    .section-container ul {
        list-style: none;
        padding: 0;
    }

        .section-container ul li {
            padding: 20px 0;
            border-bottom: 1px solid #eee;
        }

            .section-container ul li:last-child {
                border-bottom: none;
            }

            .section-container ul li strong {
                font-size: 2.2rem;
                color: #3498db;
                display: block;
                margin-bottom: 5px;
            }

            .section-container ul li p {
                font-size: 1.8rem;
                color: #555;
                margin: 5px 0;
            }

            .section-container ul li em {
                font-size: 0.9rem;
                color: #999;
            }

    /* Action Buttons */
    .tour-actions {
        text-align: center;
        margin-bottom: 40px;
    }

    .booking {
        display: inline-block;
        padding: 12px 40px;
        font-size: 1.6rem;
        text-decoration: none;
        background-color: green;
        color: #fff;
        border-radius: 25px;
        font-weight: 500;
    }

    /* Related Tours */
    .related-tours {
        background: #f9f9f9;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .related-title {
        font-size: 2rem;
        color: #2c3e50;
        margin-bottom: 25px;
        text-align: center;
        font-weight: 600;
    }

    .related-tours-list {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .related-tour-item {
        width: 30%;
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .related-tour-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }

        .related-tour-item a {
            text-decoration: none;
            color: inherit;
            display: block;
        }

    .related-tour-img {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    .related-tour-title {
        font-size: 1.6rem;
        margin: 15px 10px 5px;
        color: #2c3e50;
        font-weight: 500;
    }

    .related-tour-price {
        font-size: 1.5rem;
        color: #e74c3c;
        margin: 0 10px 15px;
        font-weight: bold;
    }

    /* Additional Styling for Consistency */
    .section-container p {
        font-size: 1.6rem;
        color: #666;
        text-align: center;
    }

    /* Typography Enhancements */
    h1, h2, h3, h4 {
        line-height: 1.6;
    }

    .tour-title, .section-title, .related-title {
        text-transform: capitalize;
    }

    /* Image Consistency */
    img {
        display: block;
        margin: 0 auto;
    }

    /* Animation Effects */

    .tour-header, .tour-content, .section-container, .related-tours {
        animation: fadeIn 0.6s ease-in;
    }

    /* Scrollbar Styling */
    ::-webkit-scrollbar {
        width: 10px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: #3498db;
        border-radius: 5px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #2c3e50;
        }
</style>
<section class="tour-detail-section">
    <div class="container">
        <!-- Tour Header -->
        <div class="tour-header">
            <h1 class="tour-title">@Html.DisplayFor(model => model.Name)</h1>
            <p class="tour-price">Giá: @Model.Price?.ToString("N0") VND</p>

            <hr class="divider" />
        </div>

        <!-- Tour Content -->
        <div class="tour-content">
            <div class="tour-image">
                <img src="@Model.Image" alt="@Model.Name" class="img-fluid" />
            </div>
            <div class="tour-body">
                <h2 class="text-center text-bold">Giới thiệu</h2>
                <p>Tour: @Html.DisplayFor(model => model.Name)</p>
                <p>Mô tả: @Html.DisplayFor(model => model.Description)</p>
                <p>Nhà cung cấp: @Html.DisplayFor(model => model.Provider.Name)</p>
                <p>Giá trên 1 người: @string.Format("{0:N0} VND", Model.PricePerson)</p>

                <p>Thời gian diễn ra: <br />@Model.StartDate?.ToString("dd/MM/yyyy") - @Model.EndDate?.ToString("dd/MM/yyyy")</p>

            </div>
        </div>

        <!-- Additional Images -->
        <div class="section-container">
            <h3 class="section-title">Hình ảnh thêm</h3>
            @if (Model.Listimagestours != null && Model.Listimagestours.Any())
            {
                <div class="row">
                    @foreach (var image in Model.Listimagestours)
                    {
                        <div class="col-md-6">
                            <img src="@image.ImageUrl" alt="@image.ImageDescription" class="img-fluid" height="300px;" />
                            <p>@image.ImageDescription</p>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>Không có hình ảnh nào cho tour này.</p>
            }
        </div>

        <!-- Services -->
        <div class="section-container">
            <h3 class="section-title">Dịch vụ của tour</h3>
            @if (Model.Services != null && Model.Services.Any())
            {
                <div class="row">
                    @foreach (var service in Model.Services)
                    {
                        <div class="col-md-4" style="background-image: url('@service.Image');background-size: cover;
                     background-position: center;border: 5px solid white;">
                            <div style="background-color: rgba(200, 200, 200, 0.7);padding: 20px;border-radius: 40px; height: 100%;">
                                <strong>@service.ServiceName</strong>
                                <p>@service.Description</p>
                                <span>@string.Format("{0:N0} VND", service.Price)</span>

                            </div>

                        </div>
                    }
                </div>
            }
            else
            {
                <p>Không có dịch vụ nào cho tour này.</p>
            }
        </div>

        <!-- Homestays -->
        <div class="section-container">
            <h3 class="section-title">Homestays</h3>
            @if (Model.Homestays != null && Model.Homestays.Any())
            {
                <div class="row">
                    @foreach (var homestay in Model.Homestays)
                    {
                        <div class="col-md-5">
                            <ul>
                                <li><strong>@homestay.Name</strong></li>
                                <li>Địa chỉ: @homestay.Address</li>
                                <li>Giá 1 đêm: @string.Format("{0:N0} VND", homestay.PricePerNight)</li>
                                <li>Mô tả: @homestay.Description</li>
                            </ul>
                        </div>
                        <div class="col-md-7">
                            <img src="@homestay.Image" alt="@homestay.Name" class="img-fluid" width="100%" height="300px" />
                        </div>
                    }
                </div>
            }
            else
            {
                <p>Không có homestay nào cho tour này.</p>
            }
        </div>

        <!-- Reviews -->
        <div class="section-container">
            <h3 class="section-title">Đánh giá khách hàng</h3>

            <!-- Form thêm bình luận mới cho tour -->
            @if (ViewBag.CurrentUser != null)
            {
                <div class="comment-form mb-4">
                    <form asp-controller="Reviews" asp-action="CreateForTour" method="post">
                        <input type="hidden" name="TourId" value="@Model.TourId" />
                        <div class="d-flex align-items-start">
                            <div class="row">
                                <div class="col-md-1"><img src="@(ViewBag.CurrentUser.Avatar ?? "/default-avatar.png")" class="rounded-circle me-2" style="width: 70px; height: 70px; object-fit: cover;" /></div>
                                <div class="col-md-11">
                                    <div class="flex-grow-1">
                                        <div class="d-flex flex-column">
                                            <textarea name="Comment" class="form-control chat-input mb-2" placeholder="Viết bình luận của bạn..." required></textarea>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="rating">
                                                    <label>Đánh giá:</label>
                                                    <select name="Rating" class="form-select d-inline-block w-auto">
                                                        <option value="1">1 sao</option>
                                                        <option value="2">2 sao</option>
                                                        <option value="3">3 sao</option>
                                                        <option value="4">4 sao</option>
                                                        <option value="5" selected>5 sao</option>
                                                    </select>
                                                </div>
                                                <button type="submit" class="btn btn-primary btn-sm">Đăng bình luận</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            }
            else
            {
                <p><a href="@Url.Action("Index", "Login")">Đăng nhập</a> để thêm bình luận.</p>
            }

            <!-- Danh sách bình luận -->
            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                <div class="comments-section chat-container">
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="chat-message">
                            <div class="d-flex align-items-start">
                                <div class="row">
                                    <div class="col-md-1"><img src="@(review.Customer?.Avatar ?? "/default-avatar.png")" class="rounded-circle me-2" style="width: 70px; height: 70px; object-fit: cover; border-radius: 50%;" /></div>
                                    <div class="col-md-11">
                                        <div class="message-content">
                                            <strong>@(review.Customer?.Name ?? "Khách ẩn danh")</strong>
                                            <div class="message-bubble">
                                                <p class="mb-0">@review.Comment</p>
                                            </div>
                                            <div class="message-meta">
                                                <small class="text-muted me-2">@review.Createdate?.ToString("HH:mm, dd/MM/yyyy")</small>
                                                <button class="btn btn-link p-0 me-2 reply-btn text-muted" data-review-id="@review.ReviewId">Trả lời</button>
                                                <span class="text-muted">• @review.Rating sao</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Replies -->
                            @if (review.ReviewOns != null && review.ReviewOns.Any())
                            {
                                <div class="replies ms-5">
                                    @foreach (var reply in review.ReviewOns)
                                    {
                                        <div class="chat-message reply">
                                            <div class="d-flex align-items-start">
                                                <div class="row" style="margin-left:50px;">
                                                    <div class="col-md-1">
                                                        <img src="@(reply.Customer?.Avatar ?? "/default-avatar.png")" class="rounded-circle me-2" style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%;" />
                                                    </div>
                                                    <div class="col-md-11">
                                                        <div class="message-content">
                                                            <strong>@(reply.Customer?.Name ?? "Khách ẩn danh")</strong>
                                                            <div class="message-bubble">
                                                                <p class="mb-0">@reply.Comment</p>
                                                            </div>
                                                            <div class="message-meta">
                                                                <small class="text-muted">@reply.Createdate?.ToString("HH:mm, dd/MM/yyyy")</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            <!-- Reply Form -->
                            <div class="reply-form mt-2 ms-5" style="display: none;" data-review-id="@review.ReviewId">
                                @if (ViewBag.CurrentUser != null)
                                {
                                    <form asp-controller="Reviews" asp-action="AddReply" method="post">
                                        <input type="hidden" name="ReviewId" value="@review.ReviewId" />
                                        <div class="d-flex align-items-start">
                                            <img src="@(ViewBag.CurrentUser.Avatar ?? "/default-avatar.png")" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;" />
                                            <div class="flex-grow-1">
                                                <input type="text" name="Comment" class="form-control chat-input rounded-pill" placeholder="Viết câu trả lời..." required />
                                                <button type="submit" class="btn btn-primary btn-sm mt-2">Gửi</button>
                                            </div>
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    <p><a href="@Url.Action("Index", "Login")">Đăng nhập</a> để trả lời bình luận.</p>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>Chưa có đánh giá nào.</p>
            }
        </div>
        <!-- Action Button -->
        <div class="tour-actions">
            <a asp-controller="Bookings" asp-action="Create" class="booking" asp-route-customerId="@Context.Session.GetInt32("CustomerId")" asp-route-id="@Model.TourId">
                Đặt
            </a>
        </div>
        <!-- Related Tours -->
        <div class="related-tours">
            <h3 class="related-title">Tour liên quan</h3>
            <div class="related-tours-list">
                @if (ViewBag.RelatedTours != null)
                {
                    foreach (var tour in ViewBag.RelatedTours as IEnumerable<LuxuryLife.Models.Tour>)
                    {
                        <div class="related-tour-item">
                            <a asp-action="Details" asp-route-id="@tour.TourId">
                                <img src="@tour.Image" alt="@tour.Name" class="related-tour-img" />
                                <h4 class="related-tour-title">@tour.Name</h4>
                                <p class="related-tour-price">@string.Format("{0:N0} VND", tour.Price)</p>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <p>Không có tour liên quan.</p>
                }
            </div>
        </div>
    </div>
</section>
 <style>
    /* Container chính */
    .section-container {
        padding: 20px;
        background-color: #f5f6fa;
        border-radius: 8px;
    }

    /* Form nhập bình luận */
    .comment-form .chat-input {
        border-radius: 20px !important;
        background-color: #e9ecef;
        border: none;
        padding: 10px 15px;
        font-size: 14px;
    }

    /* Container chứa các bình luận */
    .chat-container {
        max-width: 100%;
        padding: 10px;
    }

    /* Tin nhắn (bình luận) */
    .chat-message {
        margin-bottom: 20px;
    }

    /* Nội dung tin nhắn */
    .message-content {
        flex-grow: 1;
    }

    .message-bubble {
        background-color: #e9ecef;
        border-radius: 15px;
        padding: 10px 15px;
        display: inline-block;
        max-width: 70%;
        word-wrap: break-word;
    }

        .message-bubble p {
            margin: 0;
            font-size: 14px;
        }

    /* Thông tin meta của tin nhắn */
    .message-meta {
        font-size: 12px;
        color: #888;
    }

    /* Phản hồi (replies) */
    .replies .chat-message {
        margin-bottom: 15px;
    }

    .replies .message-bubble {
        background-color: #f1f3f5;
    }

    /* Form trả lời */
    .reply-form .chat-input {
        border-radius: 20px !important;
        background-color: #e9ecef;
        border: none;
        padding: 8px 15px;
        font-size: 14px;
    }

    /* Nút trả lời */
    .reply-btn {
        font-size: 12px;
        text-decoration: none;
        color: #888 !important;
    }

        .reply-btn:hover {
            color: #555 !important;
        }

    /* Responsive */
    @@media (max-width: 576px) {
        .message-bubble {
            max-width: 90%;
        }
    }
</style>
@section Scripts {
    <script>
                document.querySelectorAll('.reply-btn').forEach(button => {
            button.addEventListener('click', function () {
                const reviewId = this.getAttribute('data-review-id');
                const replyForm = document.querySelector(`.reply-form[data-review-id="${reviewId}"]`);
                replyForm.style.display = replyForm.style.display === 'none' ? 'block' : 'none';
            });
        });
    </script>
}