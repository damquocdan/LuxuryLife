@model LuxuryLife.Models.LoginUser

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/Logincustomer.css">
<section id="login-section" class="login-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="login-card">
                    <h1 class="login-title text-center">Đăng nhập</h1>
                    <p class="login-subtitle text-center">Truy cập tài khoản của bạn để khám phá thế giới du lịch</p>
                    <hr class="divider" />

                    <!-- Hiển thị lỗi -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-4">
                            <ul class="mb-0">
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    foreach (var error in modelState.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                        </div>
                    }

                    <!-- Form -->
                    <form asp-action="Index" method="post" class="login-form">
                        <!-- Email -->
                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" id="Email" class="form-control" placeholder="Nhập email của bạn" required />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Mật khẩu -->
                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label">Mật khẩu</label>
                            <input asp-for="Password" type="password" id="Password" class="form-control" placeholder="Nhập mật khẩu" required />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Nút đăng nhập -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-login">Đăng nhập</button>
                        </div>

                        <!-- Đăng ký -->
                        <p class="text-center text-muted mt-3">
                            Bạn chưa có tài khoản?
                            <a asp-controller="Customers" asp-action="Create" class="text-primary text-decoration-none fw-bold">Đăng ký ngay</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}