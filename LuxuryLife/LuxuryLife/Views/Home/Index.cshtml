@model IEnumerable<LuxuryLife.Models.Tour>

@{
    var images = (List<LuxuryLife.Models.Image>)ViewBag.Images;
}
<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item">
            @foreach (var tour in Model)
            {
                @foreach (var image in images)
                {
                    <img src="@image.ImageUrl" class="d-block w-100" alt="...">
                }
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@tour.Name</h5>
                            <p class="card-text">
                                Điểm đến: @tour.Destination <br />
                                Giá: @string.Format("{0:N0}", tour.PricePerPerson) VND <br />
                                Ngày bắt đầu: @tour.StartDate?.ToString("dd/MM/yyyy") <br />
                                Ngày kết thúc: @tour.EndDate?.ToString("dd/MM/yyyy")
                            </p>
                            <a asp-area="CustomerUser" asp-controller="Favorites" asp-action="Add" asp-route-id="@tour.TourId" asp-route-customerId="@Context.Session.GetInt32("CustomerId")">
                                <i class="fi fi-bs-shopping-bag">Thêm vào danh sách yêu thích</i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
