@model IEnumerable<LuxuryLife.Models.Tour>

@{
    ViewData["Title"] = "Danh sách Tour";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Danh sách Tour</h1>
    <div class="row">
        @foreach (var tour in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@tour.Name</h5>
                        <p class="card-text">
                            Điểm đến: @tour.Destination <br />
                            Giá: @string.Format("{0:N0}", tour.PricePerPerson) VND <br />
                            Ngày bắt đầu: @tour.StartDate?.ToString("dd/MM/yyyy") <br />
                            Ngày kết thúc: @tour.EndDate?.ToString("dd/MM/yyyy")
                        </p>
                        <a href="#" class="btn btn-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
