@model LuxuryLife.Models.LoginProvider
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập nhà cung cấp</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">

    <style>
        body {
            background-image: url('/images/TourHalong.jpg'); /* Đường dẫn đến hình nền */
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .login-box {
            background-color: rgba(255, 255, 255, 0.4); /* Nền trắng trong suốt */
            border-radius: 10px;
            padding: 30px;
            width: 500px;
            border: 2px solid #007bff; /* Border cho form đăng nhập */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Hiệu ứng bóng */
        }

        .login-title {
            text-align: center;
            margin-bottom: 20px;
            font-size: 34px;
            font-weight: bold;
            color: #007bff; /* Màu chữ tiêu đề */
        }

        .custom-input {
            margin-bottom: 15px;
            border: 1px solid #ced4da; /* Border cho input */
            border-radius: 5px; /* Bo góc nhẹ */
        }

            .custom-input:focus {
                border-color: #007bff; /* Border xanh khi focus */
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Hiệu ứng sáng khi focus */
            }

        .input-group-text {
            border: 1px solid #ced4da; /* Border cho icon */
            border-right: none; /* Loại bỏ border phải để liền mạch với input */
        }

        .error-list {
            list-style-type: none;
            padding: 0;
            margin: 10px 0;
        }

            .error-list li {
                color: white; /* Màu đỏ cho lỗi */
                margin-bottom: 5px;
                display: flex;
                align-items: center;
            }

                .error-list li i {
                    margin-right: 5px;
                }

        .btn-primary {
            border: 1px solid #007bff; /* Border cho nút */
        }
    </style>
</head>
<body class="hold-transition">
    <div class="login-box">
        <div class="login-title">
            <i class="fas fa-user-lock"></i> Đăng nhập nhà cung cấp
        </div>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                <ul class="error-list">
                    @foreach (var modelState in ViewData.ModelState.Values)
                    {
                        foreach (var error in modelState.Errors)
                        {
                            <li><i class="fas fa-exclamation-triangle"></i> @error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }
        <form asp-action="Index" method="post">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                </div>
                <input asp-for="Email" type="email" class="custom-input form-control form-control-lg" placeholder="Email" required />
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                </div>
                <input asp-for="Password" type="password" class="custom-input form-control form-control-lg" placeholder="Mật khẩu" required />
            </div>

            <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
        </form>
    </div>

    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
</body>
</html>