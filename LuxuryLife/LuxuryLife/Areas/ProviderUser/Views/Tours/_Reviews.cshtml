@model List<LuxuryLife.Models.Review>

<div class="position-relative border rounded p-3 bg-dark text-white">
    <!-- Nút đóng -->
    <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-2" aria-label="Đóng" onclick="closeDetailSection()"></button>

    @if (Model != null && Model.Any())
    {
        <h4>Đánh giá cho tour: @ViewBag.TourName</h4>
        <ul class="list-group">
            @foreach (var review in Model)
            {
                <li class="list-group-item">
                    <strong>@review.Customer.Name</strong> - @review.Createdate?.ToString("dd/MM/yyyy HH:mm")
                    <p>@review.Comment</p>
                    <p>Đánh giá: @review.Rating/5 ⭐</p>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">@ViewBag.Message</p>
    }
</div>
