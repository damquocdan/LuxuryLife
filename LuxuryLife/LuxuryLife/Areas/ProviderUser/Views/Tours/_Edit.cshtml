@model LuxuryLife.Models.Tour

@{
    ViewData["Title"] = "Edit";
}
<div class="position-relative border rounded p-3 bg-dark text-white">
    <!-- Nút đóng -->
    <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-2" aria-label="Đóng" onclick="closeDetailSection()"></button>
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-lg tour-card">
                <div class="card-header text-white d-flex justify-content-between align-items-center">
                    <h2 class="card-title display-5 text-center w-100"> Sửa tour du lịch</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="TourId" />

                        <dl class="row tour-details">
                            <dt class="col-sm-5 text-lg font-weight-bold">🌍 Tên tour</dt>
                            <dd class="col-sm-7 text-lg">
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-5 text-lg font-weight-bold">📜 Mô tả</dt>
                            <dd class="col-sm-7 text-lg">
                                <input asp-for="Description" class="form-control" required />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-5 text-lg font-weight-bold">📸 Hình ảnh</dt>
                            <dd class="col-sm-7 text-lg">
                                @if (!string.IsNullOrEmpty(Model.Image))
                                {
                                    <img src="@Model.Image" alt="Tour Image" class="tour-image" height="300px" />
                                }
                                <input type="file" name="Image" class="form-control mt-2" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-5 text-lg font-weight-bold">💰 Giá mỗi người</dt>
                            <dd class="col-sm-7 text-lg">
                                <input asp-for="PricePerson" type="number" step="0.01" class="form-control" required />
                                <span asp-validation-for="PricePerson" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-5 text-lg font-weight-bold">📅 Ngày bắt đầu</dt>
                            <dd class="col-sm-7 text-lg">
                                <input asp-for="StartDate" type="date" class="form-control" value="@Model.StartDate?.ToString("yyyy-MM-dd")" required />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-5 text-lg font-weight-bold">📅 Ngày kết thúc</dt>
                            <dd class="col-sm-7 text-lg">
                                <input asp-for="EndDate" type="date" class="form-control" value="@Model.EndDate?.ToString("yyyy-MM-dd")" required />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </dd>

                            <dt class="col-sm-5 text-lg font-weight-bold">💲 Tổng giá</dt>
                            <dd class="col-sm-7 text-lg">
                                <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </dd>
                        </dl>

                        <!-- Hidden fields -->
                        <input asp-for="Status" type="hidden" />
                        <input asp-for="Createdate" type="hidden" />
                        <input asp-for="ProviderId" type="hidden" value="@Model.ProviderId" />

                        <div class="text-center mt-4">
                            <input type="submit" value="Lưu" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

 </div>

<style>
    .tour-card {
        height: 800px;
        border-radius: 15px;
    }

    .tour-image {
        transition: transform 0.3s ease-in-out;
        border-radius: 10px;
        max-height: 300px;
    }

        .tour-image:hover {
            transform: scale(1.1);
        }

    .tour-details dt {
        transition: all 0.3s ease-in-out;
        font-size: 1.1rem;
        color: #000;
        display: flex;
        align-items: center;
        font-weight: bold;
    }

        .tour-details dt:hover {
            font-size: 1.2rem;
            color: #ff5733;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
        }

    .tour-details dd {
        margin-bottom: 1.5rem;
    }

    .btn-primary {
        font-size: 1.2rem;
        padding: 10px 20px;
    }
</style>