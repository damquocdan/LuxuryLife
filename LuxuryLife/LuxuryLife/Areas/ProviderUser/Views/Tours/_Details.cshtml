@model LuxuryLife.Models.Tour

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="card-title display-5 text-center w-100">Thông tin Tour</h2>
                    <button type="button" class="btn-close btn-close-white" aria-label="Đóng" onclick="closeDetailSection()"></button>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">

                        <dl class="row">
                            <img src="@Html.DisplayFor(model => model.Image)" class="img-fluid rounded border border-primary tour-image" alt="Tour Image" />

                            <dt class="col-sm-4 text-lg font-weight-bold">
                                Tên tour
                            </dt>
                            <dd class="col-sm-8 text-lg">
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt class="col-sm-4 text-lg font-weight-bold">
                                Mô tả
                            </dt>
                            <dd class="col-sm-8 text-lg">
                                @Html.DisplayFor(model => model.Description)
                            </dd>

                            <dt class="col-sm-4 text-lg font-weight-bold">
                                Dịch vụ
                            </dt>
                            <dd class="col-sm-8 text-lg">
                                @ViewBag.ServiceName
                            </dd>

                            <dt class="col-sm-4 text-lg font-weight-bold">
                                Homestay
                            </dt>
                            <dd class="col-sm-8 text-lg">
                                @ViewBag.HomestayName
                            </dd>

                            <dt class="col-sm-4 text-lg font-weight-bold">
                                Giá per người
                            </dt>
                            <dd class="col-sm-8 text-lg">
                                @Html.DisplayFor(model => model.PricePerson)
                            </dd>

                            <dt class="col-sm-4 text-lg font-weight-bold">
                                Ngày bắt đầu
                            </dt>
                            <dd class="col-sm-8 text-lg">
                                @Html.DisplayFor(model => model.StartDate)
                            </dd>

                            <dt class="col-sm-4 text-lg font-weight-bold">
                                Ngày kết thúc
                            </dt>
                            <dd class="col-sm-8 text-lg h5">
                                @Html.DisplayFor(model => model.EndDate)
                            </dd>

                            <dt class="col-sm-4 text-lg font-weight-bold">
                                Giá
                            </dt>
                            <dd class="col-sm-8 text-success text-lg h5">
                                @Html.DisplayFor(model => model.Price)
                            </dd>

                            <dt class="col-sm-4 text-lg font-weight-bold">
                                Trạng thái
                            </dt>
                            <dd class="col-sm-8 text-lg h5">
                                @if (Model.Status == "Active")
                                {
                                    <span class="badge bg-success p-2 h5">Hoạt động</span>
                                }
                                else if (Model.Status == "Inactive")
                                {
                                    <span class="badge bg-danger p-2 h5">Không hoạt động</span>
                                }
                                else if (Model.Status == "Pending")
                                {
                                    <span class="badge bg-warning p-2 h5">Chờ xử lý</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary p-2 h5">Trạng thái không xác định</span>
                                }
                            </dd>

                            <dt class="col-sm-4 text-lg font-weight-bold">
                                Ngày tạo
                            </dt>
                            <dd class="col-sm-8 text-lg">
                                @Html.DisplayFor(model => model.Createdate)
                            </dd>

                            <dt class="col-sm-4 text-lg font-weight-bold">
                                Nhà cung cấp
                            </dt>
                            <dd class="col-sm-8 text-lg">
                                @Html.DisplayFor(model => model.Provider.Name)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .tour-image {
        transition: transform 0.3s ease-in-out;
    }

        .tour-image:hover {
            transform: scale(1.1);
        }
</style>

