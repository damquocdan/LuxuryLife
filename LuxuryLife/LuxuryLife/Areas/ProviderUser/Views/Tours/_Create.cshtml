@model LuxuryLife.Models.Tour

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm mới tour du lịch</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Form fields with labels and inputs in two columns -->
            <div class="form-group row">
                <label asp-for="Name" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Image" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Image" type="file" class="form-control" required />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Description" class="form-control" required />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ServiceId" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="ServiceId" class="form-control"  />
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="HomestayId" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="HomestayId" class="form-control"  />
                    <span asp-validation-for="HomestayId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PricePerson" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="PricePerson" type="number" class="form-control" required />
                    <span asp-validation-for="PricePerson" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="StartDate" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="StartDate" class="form-control" required />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EndDate" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="EndDate" class="form-control" required />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Price" type="number" class="form-control" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <!-- Hidden field for ProviderId -->
            <input asp-for="ProviderId" type="hidden" value="@ViewData["ProviderId"]" />

            <div class="form-group row">
                <div class="col-md-9 offset-md-3">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Đóng</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
