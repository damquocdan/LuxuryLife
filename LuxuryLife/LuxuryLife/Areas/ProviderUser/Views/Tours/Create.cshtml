@model LuxuryLife.Models.Tour

@{
    ViewData["Title"] = "Thêm mới tour du lịch";
    var providerId = ViewData["ProviderId"] as int?;
    var services = ViewBag.Services as List<Service>; // Danh sách dịch vụ từ controller
    var homestays = ViewBag.Homestays as List<Homestay>; // Danh sách homestay từ controller
}

<h1>Thêm mới tour du lịch</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="Name" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Image" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Image" type="file" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <!-- Thay input bằng select multiple cho Service -->
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Dịch vụ</label>
                <div class="col-md-9">
                    <select name="SelectedServiceIds" class="form-control" multiple>
                        @if (services != null)
                        {
                            foreach (var service in services)
                            {
                                <option value="@service.ServiceId">@service.ServiceName</option>
                            }
                        }
                    </select>
                    <small class="form-text text-muted">Giữ Ctrl để chọn nhiều dịch vụ.</small>
                </div>
            </div>
            <!-- Thay input bằng select multiple cho Homestay -->
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Homestay</label>
                <div class="col-md-9">
                    <select name="SelectedHomestayIds" class="form-control" multiple>
                        @if (homestays != null)
                        {
                            foreach (var homestay in homestays)
                            {
                                <option value="@homestay.HomestayId">@homestay.Name</option>
                            }
                        }
                    </select>
                    <small class="form-text text-muted">Giữ Ctrl để chọn nhiều homestay.</small>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Description" class="form-control" required />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PricePerson" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="PricePerson" type="number" step="0.01" class="form-control" required />
                    <span asp-validation-for="PricePerson" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="StartDate" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="StartDate" type="date" class="form-control" required />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EndDate" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="EndDate" type="date" class="form-control" required />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Price" type="number" step="0.01" class="form-control" readonly />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <!-- Hidden fields -->
            <input asp-for="ProviderId" type="hidden" value="@ViewData["ProviderId"]" />
            <input asp-for="Status" type="hidden" value="Active" />
            <input asp-for="Createdate" type="hidden" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" />

            <div class="form-group row">
                <div class="col-md-9 offset-md-3">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Đóng</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function calculatePrice() {
            const startDate = new Date(document.getElementById("StartDate").value);
            const endDate = new Date(document.getElementById("EndDate").value);
            const pricePerson = parseFloat(document.getElementById("PricePerson").value) || 0;

            if (startDate && endDate && !isNaN(pricePerson)) {
                const timeDiff = endDate - startDate;
                const daysDiff = Math.ceil(timeDiff / (1000 * 60 * 60 * 24));

                if (daysDiff >= 0) {
                    const price = daysDiff * pricePerson;
                    document.getElementById("Price").value = price.toFixed(2);
                } else {
                    document.getElementById("Price").value = 0;
                }
            } else {
                document.getElementById("Price").value = "";
            }
        }

        document.getElementById("StartDate").addEventListener("change", calculatePrice);
        document.getElementById("EndDate").addEventListener("change", calculatePrice);
        document.getElementById("PricePerson").addEventListener("input", calculatePrice);
        window.onload = calculatePrice;
    </script>
}