@model LuxuryLife.Models.Tour

@{
    ViewData["Title"] = "Delete";
}
<div class=" ">
    <div class="row justify-content-center" style= "background: rgba(255, 255, 255, 0.4);">
        <div class="col-md-12">
            <div class="card shadow-lg position-relative">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h2 class="card-title display-5 text-center w-100">
                        <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa Tour
                    </h2>
                    <button type="button" class="btn-close btn-close-white" aria-label="Đóng" onclick="closeDetailSection()"></button>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <h3 class="mt-4 text-black">
                            Bạn có muốn xóa tour du lịch: <b>@Html.DisplayFor(model => model.Name)</b> của nhà cung cấp
                            <b>@Html.DisplayFor(model => model.Provider.Name)</b>
                        </h3>
                    </div>
                    <hr />
                    <div class="text-center">
                        <img src="@Model.Image" alt="@Model.Name" class="img-fluid rounded tour-image" />
                    </div>
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="TourId" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger btn-lg px-4">
                                <i class="fas fa-trash-alt me-2"></i>Xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .card {
         background: rgba(255, 255, 255, 0.4);
        position: relative;
        z-index: 3;
    }

    .tour-image {
        max-height: 300px;
        object-fit: cover;
        transition: transform 0.3s ease-in-out;
        border: 5px solid rgba(255, 255, 255, 0.6);
    }

        .tour-image:hover {
            transform: scale(1.05);
        }

    .btn-danger {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }
</style>