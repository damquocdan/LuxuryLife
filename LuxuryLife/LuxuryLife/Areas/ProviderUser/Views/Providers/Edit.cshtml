@model LuxuryLife.Models.Provider

@{
    ViewData["Title"] = "Chỉnh sửa Nhà cung cấp";
    Layout = "~/Areas/ProviderUser/Views/Shared/_Providers.cshtml";
}

<div class="body">
    <h1 class="text-light text-center"><i class="fas fa-edit"></i> Chỉnh sửa Nhà cung cấp</h1>
    <div class="row justify-content-center">
        <div class="col-md-6 form-container" id="edit-section">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProviderId" />

                <div class="form-group row mb-3">
                    <label asp-for="Name" class="col-sm-3 col-form-label"><i class="fas fa-user"></i> Tên</label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Email" class="col-sm-3 col-form-label"><i class="fas fa-envelope"></i> Email</label>
                    <div class="col-sm-9">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Password" class="col-sm-3 col-form-label"><i class="fas fa-key"></i> Mật khẩu</label>
                    <div class="col-sm-9">
                        <input asp-for="Password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Avatar" class="col-sm-3 col-form-label"><i class="fas fa-image"></i> Ảnh đại diện</label>
                    <div class="col-sm-9">
                        <input asp-for="Avatar" type="file" class="form-control" />
                        @if (Model.Avatar != null)
                        {
                            <img src="@Url.Content(Model.Avatar)" class="tour-img mt-2" alt="Ảnh đại diện hiện tại" />
                        }
                        <span asp-validation-for="Avatar" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Phone" class="col-sm-3 col-form-label"><i class="fas fa-phone"></i> Điện thoại</label>
                    <div class="col-sm-9">
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Address" class="col-sm-3 col-form-label"><i class="fas fa-map-marker-alt"></i> Địa chỉ</label>
                    <div class="col-sm-9">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Rating" class="col-sm-3 col-form-label"><i class="fas fa-star"></i> Đánh giá</label>
                    <div class="col-sm-9">
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu</button>
                        <a onclick="closeEditSection()" class="btn btn-secondary"><i class="fas fa-times"></i> Hủy</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function closeEditSection() {
        window.history.back();
    }
</script>

<style>
    .body {
        background-image: url('/images/TourHalong.jpg');
        background-size: cover;
        background-attachment: fixed;
        position: relative;
        height:970px;
    }

    .form-container {
        border-radius: 10px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(5px);
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
    }

    .form-group label {
        font-weight: bold;
        color: white;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.8);
        border-radius: 5px;
    }

    .btn {
        padding: 10px 15px;
        font-size: 1rem;
    }

    .tour-img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 8px;
        transition: transform 0.3s ease-in-out;
    }

        .tour-img:hover {
            transform: scale(1.1);
        }
</style>
