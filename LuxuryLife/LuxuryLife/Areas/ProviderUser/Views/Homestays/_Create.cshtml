@model LuxuryLife.Models.Homestay

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm homestays</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Name Field -->
            <div class="form-group row">
                <label asp-for="Name" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <!-- Description Field -->
            <div class="form-group row">
                <label asp-for="Description" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Description" class="form-control" required />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <!-- Address Field -->
            <div class="form-group row">
                <label asp-for="Address" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Address" class="form-control" required />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <!-- Image Field -->
            <div class="form-group row">
                <label asp-for="Image" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Image" type="file" class="form-control" required />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>

            <!-- PricePerNight Field -->
            <div class="form-group row">
                <label asp-for="PricePerNight" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="PricePerNight" type="number" class="form-control" required />
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>
            </div>

            <!-- Hidden ProviderId Field -->
            <input asp-for="ProviderId" type="hidden" value="@ViewData["ProviderId"]" />

            <!-- Submit Button -->
            <div class="form-group row">
                <div class="col-md-9 offset-md-3">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Đóng</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
