@model LuxuryLife.Models.Homestay

@{
    ViewData["Title"] = "Delete";
}

<style>
    .card {
        background: rgba(255, 255, 255, 0.2); /* Nền trắng mờ */
        backdrop-filter: blur(10px); /* Hiệu ứng mờ */
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .icon-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>

<div class="card shadow-lg p-4">
    <div class="icon-header">
        <h3 class="text-danger">
            <i class="fas fa-trash"></i> Xóa Homestay
        </h3>
        <button id="closeDetailSection" class="btn btn-secondary" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <hr />

    <h5>
        Bạn có chắc chắn muốn xoá homestay <b class="text-primary">@Html.DisplayFor(model => model.Name)</b>?
    </h5>
    <img src="@Model.Image" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px; width: 100%; object-fit: cover;" />

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="HomestayId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Xóa
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Hủy
        </a>
    </form>
</div>

<script>
    function closeDetailSection() {
        $("#list-section").removeClass("col-md-8").addClass("col-md-12");
        $("#detail-section").addClass("d-none");
    }
</script>