@model LuxuryLife.Models.Homestay

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <h1>Bạn có muốn xoá Homestay: <b> @Html.DisplayFor(model => model.Name)</b></h1>
    <img src="@Model.Image" alt="@Model.Name" width="100%" height="300px" />

    <form asp-action="Delete">
        <input type="hidden" asp-for="HomestayId" />
        <input type="submit" value="Xoá" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-success">Đóng</a>
    </form>
</body>
</html>
