@model LuxuryLife.Models.Service

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm dịch vụ</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- ServiceName -->
            <div class="form-group row">
                <label asp-for="ServiceName" class="col-md-4 col-form-label "></label>
                <div class="col-md-8">
                    <input asp-for="ServiceName" class="form-control" />
                    <span asp-validation-for="ServiceName" class="text-danger"></span>
                </div>
            </div>

            <!-- Description -->
            <div class="form-group row">
                <label asp-for="Description" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <!-- Price -->
            <div class="form-group row">
                <label asp-for="Price" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <!-- TourId -->
            <div class="form-group row">
                <label asp-for="TourId" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <select asp-for="TourId" class="form-control" asp-items="ViewBag.TourId"></select>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group row">
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success ml-2">Đóng</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
