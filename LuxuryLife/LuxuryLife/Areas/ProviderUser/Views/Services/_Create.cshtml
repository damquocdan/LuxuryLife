@model LuxuryLife.Models.Service

@{
    ViewData["Title"] = "Thêm Dịch Vụ";
}

<style>
    .card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .icon-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>
<div class="card shadow-lg p-4">
    <div class="icon-header">
        <h3 class="text-primary">
            <i class="fas fa-plus-circle"></i> Thêm Dịch vụ
        </h3>
        <button id="closeDetailSection" class="btn btn-secondary" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="ServiceName" class="form-label">Tên Dịch Vụ</label>
            <input asp-for="ServiceName" class="form-control" required />
            <span asp-validation-for="ServiceName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Mô Tả</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="form-label">Giá</label>
            <input asp-for="Price" type="number" class="form-control" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TourId" class="form-label">Tour Liên Quan</label>
            <select asp-for="TourId" class="form-control" asp-items="ViewBag.TourId"></select>
        </div>

        <div class="form-group text-center mt-3">
            <button type="submit" class="btn btn-primary">Thêm</button>
            <a asp-action="Index" class="btn btn-secondary">Đóng</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}