@model LuxuryLife.Models.Service

@{
    ViewData["Title"] = "Details";
}

<style>
    .card {
        background: rgba(255, 255, 255, 0.2); /* Nền trắng mờ */
        backdrop-filter: blur(10px); /* Hiệu ứng mờ */
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        position: relative;
    }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 15px;
        background: transparent;
        border: none;
        font-size: 20px;
        cursor: pointer;
    }

    .info-label {
        font-weight: bold;
        color: #333;
    }
</style>

<div class="card shadow-lg p-4 position-relative">
    <button id="closeDetailSection" class="close-btn text-danger" onclick="closeDetailSection()">
        <i class="fas fa-times"></i>
    </button>

    <h3 class="text-primary">
        <i class="fas fa-concierge-bell"></i> Thông tin chi tiết dịch vụ
    </h3>
    <hr />

    <dl class="row mt-3">
        <dt class="col-sm-4 info-label">
            <i class="fas fa-tag"></i> Tên dịch vụ:
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ServiceName)
        </dd>

        <dt class="col-sm-4 info-label">
            <i class="fas fa-align-left"></i> Mô tả:
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-4 info-label">
            <i class="fas fa-dollar-sign"></i> Giá dịch vụ:
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt class="col-sm-4 info-label">
            <i class="fas fa-map"></i> Thuộc tour:
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Tour.Name)
        </dd>
    </dl>

</div>

<script>
    function closeDetailSection() {
        $("#list-section").removeClass("col-md-8").addClass("col-md-12");
        $("#detail-section").addClass("d-none");
    }
</script>