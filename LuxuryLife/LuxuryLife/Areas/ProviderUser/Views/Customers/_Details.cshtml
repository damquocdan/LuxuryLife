@model LuxuryLife.Models.Customer

@{
    ViewData["Title"] = "Details";
}
<style>
    .card {
        background: rgba(255, 255, 255, 0.2); /* Nền trắng mờ */
        backdrop-filter: blur(10px); /* Hiệu ứng mờ */
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

</style>
<div class="card shadow-lg p-4">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="text-primary">
            <i class="fas fa-user"></i> Khách hàng <b>@Html.DisplayFor(model => model.Name)</b>
        </h3>
        <button id="closeDetailSection" class="btn btn-danger" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            <i class="fas fa-id-badge"></i> @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-4">
            <i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-4">
            <i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-4">
            <i class="fas fa-image"></i> @Html.DisplayNameFor(model => model.Avatar)
        </dt>
        <dd class="col-sm-8">
            <img src="@Html.DisplayFor(model => model.Avatar)"
                 alt="@Html.DisplayFor(model => model.Name)"
                 class="img-thumbnail" width="200px" height="200px" />
        </dd>
        <dt class="col-sm-4">
            <i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-4">
            <i class="fas fa-birthday-cake"></i> @Html.DisplayNameFor(model => model.Dob)
        </dt>
        <dd class="col-sm-8">
            <p>Ngày sinh: @(Model.Dob?.ToString("dd/MM/yyyy"))</p>

        </dd>
    </dl>
</div>

<script>
    function closeDetailSection() {
        $("#list-section").removeClass("col-md-8").addClass("col-md-12");
        $("#detail-section").addClass("d-none");
    }
</script>
