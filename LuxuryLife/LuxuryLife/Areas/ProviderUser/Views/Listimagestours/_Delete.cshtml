@model LuxuryLife.Models.Listimagestour

@{
    ViewData["Title"] = "Delete";
}

<style>
    .card {
        background: rgba(255, 255, 255, 0.2); /* Nền trắng mờ */
        backdrop-filter: blur(10px); /* Hiệu ứng mờ */
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .image-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    img {
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }
</style>

<div class="card shadow-lg p-4">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="text-danger">
            <i class="fas fa-trash"></i> Xóa Hình Ảnh Tour
        </h3>
        <button id="closeDetailSection" class="btn btn-secondary" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <hr />

    <h5>Bạn có chắc chắn muốn xoá ảnh này của tour du lịch <b class="text-primary">@Html.DisplayFor(model => model.Tour.Name)</b>?</h5>

    <div class="image-container">
        <img src="@Model.ImageUrl" alt="@Model.ImageDescription" width="100%" height="300px" />
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ListimagestourId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Xóa
        </button>
    </form>
</div>

<script>
    function closeDetailSection() {
        $("#list-section").removeClass("col-md-8").addClass("col-md-12");
        $("#detail-section").addClass("d-none");
    }
</script>
