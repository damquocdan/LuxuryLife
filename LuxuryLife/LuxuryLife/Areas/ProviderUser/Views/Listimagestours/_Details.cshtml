@model LuxuryLife.Models.Listimagestour

@{
    ViewData["Title"] = "Details";
}

<style>
    .card {
        background: rgba(255, 255, 255, 0.2); /* Nền trắng mờ */
        backdrop-filter: blur(10px); /* Hiệu ứng mờ */
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 15px;
        background: transparent;
        border: none;
        font-size: 20px;
        cursor: pointer;
    }

    .info-label {
        font-weight: bold;
        color: #333;
    }
</style>

<div class="card shadow-lg p-4 position-relative">
    <button id="closeDetailSection" class="close-btn text-danger" onclick="closeDetailSection()">
        <i class="fas fa-times"></i>
    </button>

    <h3 class="text-primary">
        <i class="fas fa-eye"></i> Chi tiết ảnh
    </h3>
    <hr />

    <div class="text-center">
        <img src="@Model.ImageUrl" alt="@Model.ImageDescription" width="100%" height="300px" class="rounded shadow-sm" />
    </div>

    <dl class="row mt-3">

        <dt class="col-sm-4 info-label">
            <i class="fas fa-align-left"></i> Mô tả ảnh:
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ImageDescription)
        </dd>

        <dt class="col-sm-4 info-label">
            <i class="fas fa-map"></i> Tour du lịch:
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Tour.Name)
        </dd>
    </dl>
</div>

<script>
    function closeDetailSection() {
        $("#list-section").removeClass("col-md-8").addClass("col-md-12");
        $("#detail-section").addClass("d-none");
    }
</script>
