@model LuxuryLife.Models.Booking

@{
    ViewData["Title"] = "Details";
}

<style>
    .card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 15px;
        background: transparent;
        border: none;
        font-size: 20px;
        cursor: pointer;
    }

    .info-label {
        font-weight: bold;
        color: #333;
    }
</style>

<div class="card shadow-lg p-4 position-relative">
    <button id="closeDetailSection" class="close-btn text-danger" onclick="closeDetailSection()">
        <i class="fas fa-times"></i>
    </button>

    <h3 class="text-primary">
        <i class="fas fa-receipt"></i> Chi tiết đơn đặt
    </h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-4 info-label">
            <i class="fas fa-calendar-alt"></i> Ngày đặt:
        </dt>
        <dd class="col-sm-8">@Model.BookingDate?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-4 info-label">
            <i class="fas fa-calendar-check"></i> Ngày nhận phòng:
        </dt>
        <dd class="col-sm-8">@Model.CheckInDate?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-4 info-label">
            <i class="fas fa-calendar-times"></i> Ngày trả phòng:
        </dt>
        <dd class="col-sm-8">@Model.CheckOutDate?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-4 info-label">
            <i class="fas fa-money-check-alt"></i> Trạng thái thanh toán:
        </dt>
        <dd class="col-sm-8">
            @if (Model.Status == "Confirmed")
            {
                <span class="text-success font-weight-bold">Đã thanh toán</span>
            }
            else
            {
                <span class="text-danger font-weight-bold">Chưa thanh toán</span>
            }
        </dd>

        <dt class="col-sm-4 info-label">
            <i class="fas fa-dollar-sign"></i> Tổng tiền:
        </dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalPrice)</dd>

        <dt class="col-sm-4 info-label">
            <i class="fas fa-user"></i> Khách hàng:
        </dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.Name)</dd>

        <dt class="col-sm-4 info-label">
            <i class="fas fa-map-marked-alt"></i> Tour:
        </dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Tour.Name)</dd>
    </dl>
</div>

<script>
    function closeDetailSection() {
        $("#list-section").removeClass("col-md-8").addClass("col-md-12");
        $("#detail-section").addClass("d-none");
    }
</script>