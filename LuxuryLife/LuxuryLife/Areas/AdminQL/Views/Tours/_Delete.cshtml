@model LuxuryLife.Models.Tour

@{
    ViewData["Title"] = "Xác nhận đánh dấu Tour đã xóa";
}

<style>
    .delete-tour-container {
        background-color: #1b1e20;
        color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        position: relative;
    }

    .delete-tour-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

        .delete-tour-header h1 {
            font-size: 2.5rem;
            color: #ff545a;
            margin: 0;
        }

    .close-btn {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        transition: color 0.3s ease;
    }

        .close-btn:hover {
            color: #ff545a;
        }

    .delete-confirm {
        text-align: center;
        margin-bottom: 20px;
    }

    .tour-image-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .tour-image {
        width: 80%;
        height: auto;
        max-height: 400px;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease;
    }

        .tour-image:hover {
            transform: scale(1.02);
        }

    .btn-danger, .btn-secondary {
        padding: 12px 25px;
        font-size: 1rem;
        border-radius: 5px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-danger {
        background-color: #ff545a;
        border-color: #ff545a;
    }

        .btn-danger:hover {
            background-color: #e64a4f;
            border-color: #e64a4f;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

    .btn-secondary {
        background-color: #343a40;
        border-color: #343a40;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #495057;
            border-color: #495057;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

    .btn-close i {
        margin-right: 5px;
    }
</style>

<div class="delete-tour-container">
    <div class="delete-tour-header">
        <h1 class="text-center"><i class="fas fa-trash-alt"></i> Đánh dấu Tour đã xóa</h1>
        <button type="button" class="close-btn" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <div class="delete-confirm">
        <h3>
            Bạn có muốn đánh dấu tour du lịch: <b>@Html.DisplayFor(model => model.Name)</b>
            của nhà cung cấp <b>@Html.DisplayFor(model => model.Provider.Name)</b> là "Đã xóa"?
            Tour này sẽ không hiển thị trong danh sách nữa.
        </h3>
    </div>

    <div class="tour-image-container">
        <img src="@Model.Image" alt="@Model.Name" class="tour-image" />
    </div>

    <div class="delete-form">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="TourId" />
            <div class="text-center">
                <input type="submit" value="Xác nhận" class="btn btn-danger btn-delete" />
                <a href="@Url.Action("Index", "Tours")" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function closeDetailSection() {
            window.location.href = "@Url.Action("Index", "Tours")";
        }
    </script>
}

