@model IEnumerable<LuxuryLife.Models.Tour>

@{
    ViewData["Title"] = "Danh Sách Tour";
}

<h1>Danh Sách Tour</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Tạo Tour Mới</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Tên Tour
            </th>
            <th>
                Mô Tả
            </th>
            <th>
                Điểm Đến
            </th>
            <th>
                Ngày Bắt Đầu
            </th>
            <th>
                Ngày Kết Thúc
            </th>
            <th>
                Giá Mỗi Người
            </th>
            <th>
                Số Người Tối Đa
            </th>
            <th>
                Số Ghế Còn Lại
            </th>
            <th>
                Đánh Giá
            </th>
            <th>
                Ngày Tạo
            </th>
            <th>
                Nhà Cung Cấp
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerPerson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxParticipants)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableSeats)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Provider.ProviderId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TourId" class="btn btn-warning btn-sm">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.TourId" class="btn btn-info btn-sm">Chi Tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.TourId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
