@model LuxuryLife.Models.Tour

@{
    ViewData["Title"] = "Chỉnh sửa trạng thái Tour";
}
<style>
    .edit-tour-status-container {
        background-color: #1b1e20;
        color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        position: relative;
    }

    .edit-tour-status-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

        .edit-tour-status-header h1 {
            font-size: 2.5rem;
            color: #ff545a;
            margin: 0;
        }

    .close-btn {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        transition: color 0.3s ease;
    }

        .close-btn:hover {
            color: #ff545a;
        }

    .form-group label {
        font-weight: bold;
        font-size: 1.2rem;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
    }

        .form-group label i {
            margin-right: 8px;
            color: #ff545a;
        }

    .form-control {
        background-color: #343a40;
        color: white;
        border: 1px solid #555;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            background-color: #495057;
            border-color: #ff545a;
            box-shadow: none;
        }

    .btn-primary, .btn-secondary {
        padding: 12px 25px;
        font-size: 1rem;
        border-radius: 5px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-primary {
        background-color: #ff545a;
        border-color: #ff545a;
    }

        .btn-primary:hover {
            background-color: #e64a4f;
            border-color: #e64a4f;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

    .btn-secondary {
        background-color: #343a40;
        border-color: #343a40;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #495057;
            border-color: #495057;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

    .btn-save i, .btn-close i {
        margin-right: 5px;
    }
</style>
<div class="edit-tour-status-container">
    <div class="edit-tour-status-header">
        <h1 class="text-center"><i class="fas fa-edit"></i> Chỉnh sửa trạng thái Tour</h1>
        <button type="button" class="close-btn" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="TourId" />

                <div class="form-group mb-4">
                    <label asp-for="Status" class="form-label"><i class="fas fa-tasks me-2"></i> Trạng thái</label>
                    <select asp-for="Status" class="form-control">
                        <option value="Active">Hoạt động</option>
                        <option value="Inactive">Không hoạt động</option>
                        <option value="Pending">Chờ xử lý</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ProviderId" class="control-label"><i class="fas fa-user-tie me-2"></i> Nhà cung cấp</label>
                    <select asp-for="ProviderId" class="form-control" asp-items="ViewBag.ProviderId"></select>
                    <span asp-validation-for="ProviderId" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-save">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
 
                </div>

                <input asp-for="Name" type="hidden" />
                <input asp-for="Image" type="hidden" />
                <input asp-for="Description" type="hidden" />
                <input asp-for="ServiceId" type="hidden" />
                <input asp-for="HomestayId" type="hidden" />
                <input asp-for="PricePerson" type="hidden" />
                <input asp-for="StartDate" type="hidden" />
                <input asp-for="EndDate" type="hidden" />
                <input asp-for="Price" type="hidden" />
                <input asp-for="Createdate" type="hidden" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function closeDetailSection() {
            window.location.href = "@Url.Action("Index", "Tour")";
        }
    </script>
}
