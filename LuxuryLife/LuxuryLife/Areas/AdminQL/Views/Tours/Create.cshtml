@model LuxuryLife.Models.Tour

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tour</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Tên tour</label> <!-- Đổi nhãn ở đây -->
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Hình ảnh</label> <!-- Đổi nhãn ở đây -->
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Mô tả</label> <!-- Đổi nhãn ở đây -->
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Dịch vụ</label> <!-- Đổi nhãn ở đây -->
                <input asp-for="ServiceId" class="form-control" />
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Homestay</label> <!-- Đổi nhãn ở đây -->
                <input asp-for="HomestayId" class="form-control" />
                <span asp-validation-for="HomestayId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Giá per người</label> <!-- Đổi nhãn ở đây -->
                <input asp-for="PricePerson" class="form-control" />
                <span asp-validation-for="PricePerson" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Ngày bắt đầu</label> <!-- Đổi nhãn ở đây -->
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Ngày kết thúc</label> <!-- Đổi nhãn ở đây -->
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Giá</label> <!-- Đổi nhãn ở đây -->
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Trạng thái</label> <!-- Đổi nhãn ở đây -->
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Nhà cung cấp</label> <!-- Đổi nhãn ở đây -->
                <select asp-for="ProviderId" class="form-control" asp-items="ViewBag.ProviderId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
