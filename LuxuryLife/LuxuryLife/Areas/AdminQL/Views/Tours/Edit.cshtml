@model LuxuryLife.Models.Tour

@{
    ViewData["Title"] = "Chỉnh sửa Tour";
}

<h1>Chỉnh sửa Tour</h1>

<h4>Thông tin Tour</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="TourId" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Tên Tour</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Image" class="form-label">Hình ảnh</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ServiceId" class="form-label">Mã dịch vụ</label>
                <input asp-for="ServiceId" class="form-control" />
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="HomestayId" class="form-label">Mã Homestay</label>
                <input asp-for="HomestayId" class="form-control" />
                <span asp-validation-for="HomestayId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PricePerson" class="form-label">Giá mỗi người</label>
                <input asp-for="PricePerson" class="form-control" />
                <span asp-validation-for="PricePerson" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label">Giá Tour</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="form-label">Trạng thái</label>
                <select asp-for="Status" class="form-control">
                    <option value="Active">Hoạt động</option>
                    <option value="Inactive">Không hoạt động</option>
                    <option value="Pending">Chờ xử lý</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Createdate" class="form-label">Ngày tạo</label>
                <input asp-for="Createdate" type="date" class="form-control" />
                <span asp-validation-for="Createdate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProviderId" class="form-label">Nhà cung cấp</label>
                <select asp-for="ProviderId" class="form-control" asp-items="ViewBag.ProviderId"></select>
                <span asp-validation-for="ProviderId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
