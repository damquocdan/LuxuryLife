@model LuxuryLife.Models.News

@{
    ViewData["Title"] = "Chi tiết tin tức";
}
<style>
    .news-details-container {
        background-color: #1b1e20;
        color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        position: relative;
    }

    .news-details-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .news-details-header h1 {
            font-size: 2.5rem;
            color: #ff545a;
            margin: 0;
        }

    .close-btn {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        transition: color 0.3s ease;
    }

        .close-btn:hover {
            color: #ff545a;
        }

    .divider {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
    }

    .news-details {
        background-color: #343a40;
        padding: 20px;
        border-radius: 5px;
    }

    .detail-dt {
        font-weight: bold;
        color: #ff545a;
        display: flex;
        align-items: center;
    }

        .detail-dt i {
            margin-right: 8px;
        }

    .detail-dd {
        background-color: rgba(255, 255, 255, 0.05);
        padding: 8px;
        border-radius: 5px;
    }

    .news-image {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
    }

    .actions {
        margin-top: 20px;
    }

    .btn-action, .btn-secondary {
        padding: 12px 25px;
        font-size: 1rem;
        border-radius: 5px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        margin: 0 10px;
    }

    .btn-action {
        background-color: #ff545a;
        border-color: #ff545a;
        color: white;
    }

        .btn-action:hover {
            background-color: #e64a4f;
            border-color: #e64a4f;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

    .btn-secondary {
        background-color: #343a40;
        border-color: #343a40;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #495057;
            border-color: #495057;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

    details summary {
        cursor: pointer;
        color: #007bff;
        text-decoration: underline;
    }

    details[open] summary {
        color: #0056b3;
    }

    .btn-close i {
        margin-right: 5px;
    }
</style>
<div class="news-details-container">
    <div class="news-details-header">
        <h1 class="text-center"><i class="fas fa-newspaper"></i> @ViewData["Title"]</h1>
        <button type="button" class="close-btn" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <hr class="divider" />

    <div class="news-details">
        <dl class="row">
            <dt class="col-sm-4 detail-dt">
                <i class="fas fa-heading"></i> Tiêu đề
            </dt>
            <dd class="col-sm-8 detail-dd">
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt class="col-sm-4 detail-dt">
                <i class="fas fa-file-alt"></i> Nội dung
            </dt>
            <dd class="col-sm-8 detail-dd">
                <details>
                    <summary>Xem thêm</summary>
                    @Html.DisplayFor(model => model.Content)
                </details>
            </dd>

            <dt class="col-sm-4 detail-dt">
                <i class="fas fa-image"></i> Đường dẫn h.ảnh
            </dt>
            <dd class="col-sm-8 detail-dd">
                <img src="@Model.ImageUrl" alt="@Model.Title" class="news-image" />
            </dd>

            <dt class="col-sm-4 detail-dt">
                <i class="fas fa-calendar-alt"></i> Ngày tạo
            </dt>
            <dd class="col-sm-8 detail-dd">
                @Html.DisplayFor(model => model.Createdate)
            </dd>
        </dl>
    </div>

    <div class="actions text-center">
        <a asp-action="Edit" asp-route-id="@Model?.NewId" class="btn btn-warning btn-action">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
  
    </div>
</div>

@section Scripts {
    <script>
        function closeDetailSection() {
            window.location.href = "@Url.Action("Index", "News")";
        }
    </script>
}