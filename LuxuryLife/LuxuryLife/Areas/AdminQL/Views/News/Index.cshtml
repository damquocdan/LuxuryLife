@model IEnumerable<LuxuryLife.Models.News>

@{
    ViewData["Title"] = "Danh Sách Tin Tức";
}

<h1 class="mt-3">Danh Sách Tin Tức</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Tạo Mới</a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Tiêu Đề
            </th>
            <th>
                Nội Dung
            </th>
            <th>
                Ngày Xuất Bản
            </th>
            <th>
                Ngày Tạo
            </th>
            <th>
                Tác Giả
            </th>
            <th>
                Homestay
            </th>
            <th>
                Nhà Cung Cấp
            </th>
            <th>
                Tour
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublicationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.AdminId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Homestay.HomestayId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Provider.ProviderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tour.TourId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NewsId" class="btn btn-warning btn-sm">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.NewsId" class="btn btn-info btn-sm">Chi Tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.NewsId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
