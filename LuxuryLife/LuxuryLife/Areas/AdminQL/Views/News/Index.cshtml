@model IEnumerable<LuxuryLife.Models.News>

@{
    ViewData["Title"] = "Danh sách tin tức";
}

<h1 class="text-center my-4">Danh sách Tin Tức</h1>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Tiêu đề</th>
            <th>Ảnh</th>
            <th>Ngày tạo</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Title" class="img-thumbnail" style="max-width: 100px; max-height: 100px;">
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Createdate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NewId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.NewId" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.NewId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table td img {
        display: block;
        margin: 0 auto;
    }

    .text-center {
        text-align: center;
    }
</style>
