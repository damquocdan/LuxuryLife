@model LuxuryLife.Models.News

@{
    ViewData["Title"] = "Chỉnh sửa tin tức";
}
<style>
    .edit-news-container {
        background-color: #1b1e20;
        color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        position: relative;
    }

    .edit-news-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .edit-news-header h1 {
            font-size: 2.5rem;
            color: #ff545a;
            margin: 0;
        }

    .close-btn {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        transition: color 0.3s ease;
    }

        .close-btn:hover {
            color: #ff545a;
        }

    .divider {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .col-form-label {
        font-weight: bold;
        color: #ff545a;
        display: flex;
        align-items: center;
    }

        .col-form-label i {
            margin-right: 8px;
        }

    .form-control {
        background-color: rgba(255, 255, 255, 0.05);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 5px;
        padding: 10px;
    }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.1);
            border-color: #ff545a;
            box-shadow: none;
        }

    .form-control-file {
        background-color: transparent;
    }

    .news-image {
        max-width: 150px;
        height: auto;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .btn-primary, .btn-secondary {
        padding: 12px 25px;
        font-size: 1rem;
        border-radius: 5px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-primary {
        background-color: #ff545a;
        border-color: #ff545a;
    }

        .btn-primary:hover {
            background-color: #e64a4f;
            border-color: #e64a4f;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

    .btn-secondary {
        background-color: #343a40;
        border-color: #343a40;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #495057;
            border-color: #495057;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

    .btn-close i {
        margin-right: 5px;
    }
</style>
<div class="edit-news-container">
    <div class="edit-news-header">
        <h1 class="text-center"><i class="fas fa-edit"></i> @ViewData["Title"]</h1>
        <button type="button" class="close-btn" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <hr class="divider" />

    <div class="edit-form">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NewId" />

            <div class="form-group row">
                <label asp-for="Title" class="col-sm-4 col-form-label"><i class="fas fa-heading"></i> Tiêu đề</label>
                <div class="col-sm-8">
                    <input asp-for="Title" class="form-control form-input" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Content" class="col-sm-4 col-form-label"><i class="fas fa-file-alt"></i> Nội dung</label>
                <div class="col-sm-8">
                    <textarea asp-for="Content" class="form-control form-input" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-sm-4 col-form-label"><i class="fas fa-image"></i> Ảnh</label>
                <div class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Avatar" class="news-image" />
                    }
                    <input asp-for="ImageUrl" type="file" class="form-control-file form-input" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Createdate" class="col-sm-4 col-form-label"><i class="fas fa-calendar-alt"></i> Ngày tạo</label>
                <div class="col-sm-8">
                    <input asp-for="Createdate" class="form-control form-input" />
                    <span asp-validation-for="Createdate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-4"></div>
                <div class="col-sm-8 text-center">
                    <input type="submit" value="Lưu" class="btn btn-primary btn-save" />
                </div>
            </div>
        </form>
    </div>
 
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function closeDetailSection() {
            window.location.href = "@Url.Action("Index", "News")";
        }
    </script>
}