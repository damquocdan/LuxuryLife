@model LuxuryLife.Models.Admin

@{
    ViewData["Title"] = "Chi tiết ";
}
<style>
    .admin-details-container {
        background-color: #1b1e20;
        color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        position: relative;
    }

        .admin-details-container h1 {
            color: #ff545a;
            text-align: center;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .admin-details-container h1 i {
                margin-right: 8px;
            }

        .admin-details-container dl {
            background-color: #282c30;
            padding: 20px;
            border-radius: 5px;
        }

        .admin-details-container dt {
            color: #ff545a;
            font-weight: bold;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

            .admin-details-container dt i {
                margin-right: 5px;
            }

        .admin-details-container dd {
            margin-bottom: 10px;
        }

    .avatar-preview {
        width: 300px;
        height: 300px;
        border-radius: 50%;
        transition: transform 0.3s ease;
        object-fit: cover;
    }

        .avatar-preview:hover {
            transform: scale(1.1);
        }

    .btn-warning, .btn-secondary {
        transition: transform 0.2s ease;
    }

        .btn-warning:hover, .btn-secondary:hover {
            transform: scale(1.05);
        }

    .delete-btn, .close-btn {
        background-color: #ff545a;
        border: none;
        transition: background-color 0.3s ease;
        color: white;
        padding: 8px 16px;
        border-radius: 4px;
    }

        .delete-btn:hover, .close-btn:hover {
            background-color: #d64045;
        }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 5px 10px;
    }
</style>
<div class="admin-details-container">
    <button class="close-btn" onclick="closeDetailSection()">
        <i class="fas fa-times"></i>
    </button>
    <h1><i class="fas fa-user-circle"></i> Chi tiết thông tin</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-5"><i class="fas fa-user me-2"></i> Tên quản lý</dt>
            <dd class="col-sm-7">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-5"><i class="fas fa-envelope me-2"></i> Email</dt>
            <dd class="col-sm-7">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-5"><i class="fas fa-lock me-2"></i> Mật khẩu</dt>
            <dd class="col-sm-7">@Html.DisplayFor(model => model.Password)</dd>

            <dt class="col-sm-4"><i class="fas fa-image me-2"></i> Ảnh đại diện</dt>
            <dd class="col-sm-8">
                <img src="@Model.Avatar" alt="@Model.Name" class="avatar-preview" />
            </dd>
        </dl>
    </div>

    <div class="text-center mt-3">
        <button class="btn btn-warning btn-sm ajax-action" data-url="@Url.Action("Edit", new { id = Model.AdminId })">
            <i class="fas fa-edit"></i> Sửa
        </button>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".ajax-action").click(function (e) {
            e.preventDefault();
            var url = $(this).data("url");
            $(".click").load(url, function (response, status, xhr) {
                if (status == "error") {
                    alert("Error: " + xhr.status + " " + xhr.statusText);
                }
            });
        });
    });
</script>