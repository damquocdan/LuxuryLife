@model LuxuryLife.Models.Admin

@{
    ViewData["Title"] = "Chi tiết thông tin Admin";
}

<style>
    .body1 {
        background-color: #1b1e20;
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        position: relative; /* Thêm position relative để định vị nút đóng */
    }

    h1 {
        color: #ff545a;
        text-align: center;
        margin-bottom: 30px;
    }

    dl {
        background-color: #282c30;
        padding: 20px;
        border-radius: 5px;
    }

    dt {
        color: #ff545a;
        font-weight: bold;
        margin-bottom: 10px;
        display: flex; /* Sử dụng flexbox để căn chỉnh icon và text */
        align-items: center; /* Căn chỉnh theo chiều dọc */
    }

        dt i {
            margin-right: 5px; /* Khoảng cách giữa icon và text */
        }

    dd {
        margin-bottom: 10px;
    }

    img {
        border-radius: 50%;
        transition: transform 0.3s ease;
    }

        img:hover {
            transform: scale(1.1);
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #1b1e20;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #e0a800;
        }

    .btn-secondary {
        background-color: #444;
        border-color: #444;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #555;
            border-color: #555;
        }

    .ajax-action {
        transition: transform 0.2s ease;
    }

        .ajax-action:hover {
            transform: scale(1.05);
        }

    /* Nút đóng */
    .closeDetailSection {
        position: absolute;
        top: 10px;
        right: 10px;
        background: transparent;
        border: none;
        color: white;
        font-size: 3em;
        cursor: pointer;
    }

        .closeDetailSection:hover {
            color: #ff545a;
        }
</style>

<div class="body1">
    <button class="closeDetailSection" onclick="window.location.href='@Url.Action("Index")'">&times;</button>
    <h1>Chi tiết thông tin Admin</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3"><i class="fas fa-user"></i> Tên quản lý</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3"><i class="fas fa-envelope"></i> Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3"><i class="fas fa-lock"></i> Mật khẩu</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>

            <dt class="col-sm-3"><i class="fas fa-image"></i> Ảnh đại diện</dt>
            <dd class="col-sm-9">
                <img src="@Model.Avatar" alt="@Model.Name" width="300px" height="300px" />
            </dd>
        </dl>
    </div>

    <div class="text-center mt-3">
        <button class="btn btn-warning btn-sm ajax-action" data-url="@Url.Action("Edit", new { id = Model.AdminId })"><i class="fas fa-edit"></i> Sửa</button>
        <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="fas fa-arrow-left"></i> Đóng</a>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
<script>
    $(document).ready(function () {
        $(".ajax-action").click(function (e) {
            e.preventDefault();
            var url = $(this).data("url");
            $(".click").load(url, function (response, status, xhr) {
                if (status == "error") {
                    alert("Error: " + xhr.status + " " + xhr.statusText);
                }
            });
        });
    });
</script>