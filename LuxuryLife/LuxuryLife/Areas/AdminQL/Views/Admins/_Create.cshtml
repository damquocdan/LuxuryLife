@model LuxuryLife.Models.Admin

@{
    ViewData["Title"] = "Tạo mới tài khoản";
}
<style>
    .create-admin-container {
        background-color: #1b1e20;
        color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        position: relative;
    }

        .create-admin-container h1 {
            color: #ff545a;
            text-align: center;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .create-admin-container h1 i {
                margin-right: 8px;
            }

    .form-group label {
        color: white;
        font-weight: bold;
        display: flex;
        align-items: center;
    }

        .form-group label i {
            margin-right: 5px;
            color: #ff545a;
        }

    .form-control {
        background-color: #282c30;
        border: 1px solid #444;
        color: white;
    }

        .form-control:focus {
            background-color: #333;
            border-color: #ff545a;
            box-shadow: 0 0 0 0.2rem rgba(255, 84, 90, 0.25);
        }

    .create-btn, .close-btn {
        background-color: #ff545a;
        border: none;
        transition: background-color 0.3s ease;
        color: white;
        padding: 8px 16px;
        border-radius: 4px;
    }

        .create-btn:hover, .close-btn:hover {
            background-color: #d64045;
        }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 5px 10px;
    }

    .text-danger {
        color: #ff545a;
    }
</style>
<div class="create-admin-container">
    <button class="close-btn" onclick="closeDetailSection()">
        <i class="fas fa-times"></i>
    </button>
    <h1><i class="fas fa-user-plus"></i> Tạo mới tài khoản</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-10">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"><i class="fas fa-user me-2"></i> Tên:</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"><i class="fas fa-envelope me-2"></i> Email:</label>
                    <input asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"><i class="fas fa-lock me-2"></i> Mật khẩu:</label>
                    <input asp-for="Password" class="form-control" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Avatar" class="control-label"><i class="fas fa-image me-2"></i> Hình đại diện:</label>
                    <input asp-for="Avatar" type="file" class="form-control" required />
                    <span asp-validation-for="Avatar" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Tạo mới" class="btn btn-primary create-btn" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}