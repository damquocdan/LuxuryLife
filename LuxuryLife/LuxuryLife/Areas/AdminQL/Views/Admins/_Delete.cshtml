@model LuxuryLife.Models.Admin

@{
    ViewData["Title"] = "Xóa Admin";
}
<style>
    .delete-admin-container {
        background-color: #1b1e20;
        color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        position: relative;
    }

        .delete-admin-container h3 {
            color: #ff545a;
            text-align: center;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .delete-admin-container h3 i {
                margin-right: 8px;
            }

        .delete-admin-container dl {
            background-color: #282c30;
            padding: 20px;
            border-radius: 5px;
        }

        .delete-admin-container dt {
            color: #ff545a;
            font-weight: bold;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

            .delete-admin-container dt i {
                margin-right: 5px;
            }

        .delete-admin-container dd {
            margin-bottom: 10px;
        }

    .avatar-preview {
        width: 300px;
        height: 300px;
        border-radius: 50%;
        transition: transform 0.3s ease;
        object-fit: cover;
    }

        .avatar-preview:hover {
            transform: scale(1.1);
        }

    .delete-btn, .close-btn {
        background-color: #ff545a;
        border: none;
        transition: background-color 0.3s ease;
        color: white;
        padding: 8px 16px;
        border-radius: 4px;
    }

        .delete-btn:hover, .close-btn:hover {
            background-color: #d64045;
        }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 5px 10px;
    }
</style>
<div class="delete-admin-container">
    <button class="close-btn" onclick="closeDetailSection()">
        <i class="fas fa-times"></i>
    </button>
    <h3><i class="fas fa-trash-alt"></i> Bạn có muốn xóa tài khoản @Html.DisplayFor(model => model.Email) này?</h3>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-4"><i class="fas fa-user me-2"></i> @Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4"><i class="fas fa-envelope me-2"></i> @Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-4"><i class="fas fa-image me-2"></i> Ảnh đại diện</dt>
            <dd class="col-sm-8">
                <img src="@Model.Avatar" alt="@Model.Name" class="avatar-preview" />
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center mt-3">
            <input type="hidden" asp-for="AdminId" />
            <input type="submit" value="Xóa" class="btn btn-danger delete-btn" />
        </form>
    </div>
</div>