@model LuxuryLife.Models.Admin

@{
    ViewData["Title"] = "Xóa Admin";
}

<style>
    .body1 {
        background-color: #1b1e20;
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        position: relative; /* Thêm position relative để định vị nút đóng */
    }

    h3 {
        color: #ff545a;
        text-align: center;
        margin-bottom: 30px;
    }

    dl {
        background-color: #282c30;
        padding: 20px;
        border-radius: 5px;
    }

    dt {
        color: #ff545a;
        font-weight: bold;
        margin-bottom: 10px;
        display: flex; /* Sử dụng flexbox để căn chỉnh icon và text */
        align-items: center; /* Căn chỉnh theo chiều dọc */
    }

        dt i {
            margin-right: 5px; /* Khoảng cách giữa icon và text */
        }

    dd {
        margin-bottom: 10px;
    }

    img {
        border-radius: 50%;
        transition: transform 0.3s ease;
    }

        img:hover {
            transform: scale(1.1);
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #c82333;
        }

    .btn-secondary {
        background-color: #444;
        border-color: #444;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #555;
            border-color: #555;
        }

    /* Nút đóng */
    .closeDetailSection {
        position: absolute;
        top: 10px;
        right: 10px;
        background: transparent;
        border: none;
        color: white;
        font-size: 3em;
        cursor: pointer;
    }

        .closeDetailSection:hover {
            color: #ff545a;
        }
</style>

<div class="body1">
    <button class="closeDetailSection" onclick="window.location.href='@Url.Action("Index")'">&times;</button>
    <h3>Bạn có muốn xóa tài khoản @Html.DisplayFor(model => model.Email) này?</h3>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-4"><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3"><i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3"><i class="fas fa-image"></i> Ảnh đại diện</dt>
            <dd class="col-sm-9">
                <img src="@Model.Avatar" alt="@Model.Name" width="300px" height="300px" />
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center mt-3">
            <input type="hidden" asp-for="AdminId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Đóng</a>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>