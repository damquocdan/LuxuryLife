@model LuxuryLife.Models.Service

@{
    ViewData["Title"] = "Chỉnh sửa dịch vụ";
}

<h1>Chỉnh sửa dịch vụ</h1>

<h4>Dịch vụ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceId" />
            <div class="form-group">
                <label asp-for="ServiceName" class="control-label">Tên dịch vụ</label>
                <input asp-for="ServiceName" class="form-control" placeholder="Nhập tên dịch vụ" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả</label>
                <input asp-for="Description" class="form-control" placeholder="Nhập mô tả dịch vụ" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Giá</label>
                <input asp-for="Price" class="form-control" placeholder="Nhập giá dịch vụ" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourId" class="control-label">Tour</label>
                <select asp-for="TourId" class="form-control" asp-items="ViewBag.TourId">
                    <option value="">Chọn tour</option>
                </select>
                <span asp-validation-for="TourId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
