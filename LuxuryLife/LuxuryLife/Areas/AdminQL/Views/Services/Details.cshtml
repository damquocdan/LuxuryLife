@model LuxuryLife.Models.Service

@{
    ViewData["Title"] = "Chi tiết dịch vụ";
}

<h1>Chi tiết dịch vụ</h1>

<div>
    <h4>Dịch vụ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên dịch vụ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceName)
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Tour
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tour.TourId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ServiceId">Chỉnh sửa</a> |
    <a asp-action="Index">Quay lại danh sách</a>
</div>
