@model LuxuryLife.Models.Review

@{
    ViewData["Title"] = "Tạo Đánh Giá Mới";
}

<h1>Tạo Đánh Giá Mới</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Khách Hàng</label> <!-- Khách Hàng -->
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>

            <div class="form-group">
                <label asp-for="TourId" class="control-label">Chuyến Du Lịch</label> <!-- Chuyến Du Lịch -->
                <select asp-for="TourId" class="form-control" asp-items="ViewBag.TourId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Rating" class="control-label">Đánh Giá</label> <!-- Đánh Giá -->
                <input asp-for="Rating" class="form-control" placeholder="Nhập điểm đánh giá (1-5)" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comment" class="control-label">Bình Luận</label> <!-- Bình Luận -->
                <input asp-for="Comment" class="form-control" placeholder="Nhập bình luận của bạn" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo Mới" class="btn btn-primary" /> <!-- Tạo Mới -->
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a> <!-- Quay Lại Danh Sách -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
