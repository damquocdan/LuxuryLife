@model LuxuryLife.Models.Review

@{
    ViewData["Title"] = "Chi Tiết Đánh Giá";
}
<style>
    .review-details-container {
        background-color: #1b1e20;
        color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        position: relative;
    }

    .review-details-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

        .review-details-header h1 {
            font-size: 2.5rem;
            color: #ff545a;
            margin: 0;
        }

    .close-btn {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        transition: color 0.3s ease;
    }

        .close-btn:hover {
            color: #ff545a;
        }

    .review-card {
        background-color: #343a40;
        color: white;
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .review-dt {
        font-weight: bold;
        color: #ff545a;
        display: flex;
        align-items: center;
    }

        .review-dt i {
            margin-right: 8px;
        }

    dd {
        background-color: rgba(255, 255, 255, 0.05);
        padding: 8px;
        border-radius: 5px;
    }

    .review-actions {
        text-align: center;
    }

    .btn-warning, .btn-secondary {
        padding: 12px 25px;
        font-size: 1rem;
        border-radius: 5px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-warning {
        background-color: #ff545a;
        border-color: #ff545a;
    }

        .btn-warning:hover {
            background-color: #e64a4f;
            border-color: #e64a4f;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

    .btn-secondary {
        background-color: #343a40;
        border-color: #343a40;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #495057;
            border-color: #495057;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

    .btn-close i, .btn-delete i {
        margin-right: 5px;
    }
</style>
<div class="review-details-container">
    <div class="review-details-header">
        <h1 class="text-center"><i class="fas fa-star-half-alt"></i> Chi Tiết Đánh Giá</h1>
        <button type="button" class="close-btn" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <div class="review-card">
        <h4>Đánh Giá</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4 review-dt">
                <i class="fas fa-star"></i> Đánh Giá Số Sao
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Rating)
            </dd>
            <dt class="col-sm-4 review-dt">
                <i class="fas fa-comment-dots"></i> Nội Dung BL,DG
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Comment)
            </dd>
            <dt class="col-sm-4 review-dt">
                <i class="fas fa-calendar-alt"></i> Ngày Đánh Giá
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Createdate)
            </dd>
            <dt class="col-sm-4 review-dt">
                <i class="fas fa-user"></i> Khách Hàng
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Customer.Name)
            </dd>
            <dt class="col-sm-4 review-dt">
                <i class="fas fa-map-signs"></i> Tour Du Lịch
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Tour.Name)
            </dd>
        </dl>
    </div>

    <div class="review-actions">
        <a asp-action="Delete" asp-route-id="@Model?.ReviewId" class="btn btn-warning btn-delete">
            <i class="fas fa-trash-alt"></i> Xoá
        </a>
 
    </div>
</div>

@section Scripts {
    <script>
        function closeDetailSection() {
            window.location.href = "@Url.Action("Index", "Review")";
        }
    </script>
}