@model LuxuryLife.Models.Review

@{
    ViewData["Title"] = "Chi Tiết Đánh Giá";
}

<h1>Chi Tiết Đánh Giá</h1>

<div>
    <h4>Đánh Giá</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Đánh Giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2">
            Bình Luận
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class="col-sm-2">
            Ngày Đánh Giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Createdate)
        </dd>
        <dt class="col-sm-2">
            Khách Hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerId)
        </dd>
        <dt class="col-sm-2">
            Chuyến Du Lịch
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tour.TourId)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ReviewId" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-primary">Quay Lại Danh Sách</a>
</div>
