@model LuxuryLife.Models.Review

@{
    ViewData["Title"] = "Xóa Đánh Giá";
}
<style>
    .delete-review-container {
    background-color: #1b1e20;
    color: white;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    position: relative;
    }

    .delete-review-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    }

    .delete-review-header h1 {
    font-size: 2.5rem;
    color: #ff545a;
    margin: 0;
    }

    .close-btn {
    background: none;
    border: none;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
    transition: color 0.3s ease;
    }

    .close-btn:hover {
    color: #ff545a;
    }

    .delete-confirm {
    text-align: center;
    margin-bottom: 20px;
    }

    .review-details {
    background-color: #343a40;
    color: white;
    padding: 20px;
    border-radius: 5px;
    margin-bottom: 20px;
    }

    .review-dt {
    font-weight: bold;
    color: #ff545a;
    display: flex;
    align-items: center;
    }

    .review-dt i {
    margin-right: 8px;
    }

    dd {
    background-color: rgba(255, 255, 255, 0.05);
    padding: 8px;
    border-radius: 5px;
    }

    .btn-danger, .btn-secondary {
    padding: 12px 25px;
    font-size: 1rem;
    border-radius: 5px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-danger {
    background-color: #ff545a;
    border-color: #ff545a;
    }

    .btn-danger:hover {
    background-color: #e64a4f;
    border-color: #e64a4f;
    transform: translateY(-2px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .btn-secondary {
    background-color: #343a40;
    border-color: #343a40;
    color: white;
    }

    .btn-secondary:hover {
    background-color: #495057;
    border-color: #495057;
    transform: translateY(-2px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }
    .btn-close i, .btn-delete i{
    margin-right: 5px;
    }
</style>
<div class="delete-review-container">
    <div class="delete-review-header">
        <h1 class="text-center"><i class="fas fa-trash-alt"></i> Xóa Đánh Giá</h1>
        <button type="button" class="close-btn" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <div class="delete-confirm">
        <h3>Bạn có muốn xóa bình luận đánh giá này?</h3>
    </div>

    <div class="review-details">
        <dl class="row">
            <dt class="col-sm-4 review-dt">
                <i class="fas fa-star me-2"></i> @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Rating)
            </dd>
            <dt class="col-sm-4 review-dt">
                <i class="fas fa-calendar-alt me-2"></i> @Html.DisplayNameFor(model => model.Createdate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Createdate)
            </dd>
            <dt class="col-sm-4 review-dt">
                <i class="fas fa-user me-2"></i> @Html.DisplayNameFor(model => model.Customer.Name)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Customer.Name) 
            </dd>
            <dt class="col-sm-4 review-dt">
                <i class="fas fa-map-signs me-2"></i> @Html.DisplayNameFor(model => model.Tour.Name)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Tour.Name)
            </dd>
        </dl>
    </div>

    <div class="delete-form">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ReviewId" />
            <div class="text-center">
                <input type="submit" value="Xóa" class="btn btn-danger btn-delete" />
 
            </div>
        </form>
    </div>
</div>