@model LuxuryLife.Models.Customer

@{
    ViewData["Title"] = "Chỉnh sửa";
}
<style>
    .edit-customer-container {
        background-color: #1b1e20;
        color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        position: relative;
    }

        .edit-customer-container h1 {
            font-size: 28px;
            margin-bottom: 20px;
            text-align: center;
        }

    .form-group label {
        font-weight: bold;
        display: flex;
        align-items: center;
    }

        .form-group label i {
            margin-right: 8px;
            color: #ff545a;
        }

    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
    }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: #ff545a;
            box-shadow: 0 0 0 0.2rem rgba(255, 84, 90, 0.25);
        }

    .save-btn, .close-btn {
        background-color: #ff545a;
        border: none;
        transition: background-color 0.3s ease;
    }

        .save-btn:hover, .close-btn:hover {
            background-color: #d64045;
        }

