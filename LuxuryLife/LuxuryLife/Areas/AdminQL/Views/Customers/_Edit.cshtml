        width: 1
</style>
<div class="edit-customer-container">
    <div class="header">
        <h1>Chỉnh sửa khách hàng</h1>
        <button class="close-btn" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CustomerId" />

                <div class="form-group row">
                    <label asp-for="Name" class="col-md-5 col-form-label"><i class="fas fa-user"></i> Tên</label>
                    <div class="col-md-7">
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Email" class="col-md-5 col-form-label"><i class="fas fa-envelope"></i> Email</label>
                    <div class="col-md-7">
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Password" class="col-md-5 col-form-label"><i class="fas fa-lock"></i> Mật khẩu</label>
                    <div class="col-md-7">
                        <input asp-for="Password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Phone" class="col-md-5 col-form-label"><i class="fas fa-phone"></i> Số điện thoại</label>
                    <div class="col-md-7">
                        <input asp-for="Phone" class="form-control" required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Avatar" class="control-label"><i class="fas fa-image"></i> Hình đại diện</label>

                    @if (!string.IsNullOrEmpty(Model.Avatar))
                    {
                        <img src="@Model.Avatar" alt="Avatar" class="avatar-preview" />
                    }

                    <input asp-for="Avatar" type="file" class="form-control" />
                    <span asp-validation-for="Avatar" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="Address" class="col-md-5 col-form-label"><i class="fas fa-map-marker-alt"></i> Địa chỉ</label>
                    <div class="col-md-7">
                        <input asp-for="Address" class="form-control" required />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Dob" class="col-md-5 col-form-label"><i class="fas fa-calendar-alt"></i> Ngày sinh</label>
                    <div class="col-md-7">
                        <input asp-for="Dob" type="date" class="form-control" required />
                        <span asp-validation-for="Dob" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Demographics" class="col-md-5 col-form-label"><i class="fas fa-info-circle"></i> Thông tin dân số</label>
                    <div class="col-md-7">
                        <input asp-for="Demographics" class="form-control" />
                        <span asp-validation-for="Demographics" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Preferences" class="col-md-5 col-form-label"><i class="fas fa-heart"></i> Sở thích</label>
                    <div class="col-md-7">
                        <input asp-for="Preferences" class="form-control" />
                        <span asp-validation-for="Preferences" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="SearchHistory" class="col-md-5 col-form-label"><i class="fas fa-history"></i> Lịch sử tìm kiếm</label>
                    <div class="col-md-7">
                        <input asp-for="SearchHistory" class="form-control" />
                        <span asp-validation-for="SearchHistory" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Createdate" class="col-md-5 col-form-label"><i class="fas fa-calendar-plus"></i> Ngày tạo</label>
                    <div class="col-md-7">
                        <input asp-for="Createdate" class="form-control" />
                        <span asp-validation-for="Createdate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-7 offset-md-5">
                        <input type="submit" value="Lưu" class="btn btn-primary save-btn" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary close-btn">Đóng</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function closeDetailSection() {
            window.location.href = '@Url.Action("Index", "Customers")';
        }
    </script>
}