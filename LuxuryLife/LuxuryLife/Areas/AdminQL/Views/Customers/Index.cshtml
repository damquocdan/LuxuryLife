@model IEnumerable<LuxuryLife.Models.Customer>

@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1 class="mt-3">Danh sách khách hàng</h1>

<p>
    <a asp-action="Create" class="btn btn-primary my-3">Thêm mới</a>
</p>
<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayName("Tên khách hàng")</th>
            <th>@Html.DisplayName("Email")</th>
            <th>@Html.DisplayName("Mật khẩu")</th>
            <th>@Html.DisplayName("Số điện thoại")</th>
            <th>@Html.DisplayName("Địa chỉ")</th>
            <th>@Html.DisplayName("Ngày sinh")</th>
            <th>@Html.DisplayName("Nhân khẩu học")</th>
            <th>@Html.DisplayName("Sở thích")</th>
            <th>@Html.DisplayName("Lịch sử tìm kiếm")</th>
            <th>@Html.DisplayName("Ngày tạo")</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.Dob)</td>
                <td>@Html.DisplayFor(modelItem => item.Demographics)</td>
                <td>@Html.DisplayFor(modelItem => item.Preferences)</td>
                <td>@Html.DisplayFor(modelItem => item.SearchHistory)</td>
                <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
