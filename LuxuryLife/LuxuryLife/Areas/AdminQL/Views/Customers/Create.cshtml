@model LuxuryLife.Models.Customer

@{
    ViewData["Title"] = "Thêm Khách Hàng";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1 class="mt-3">Thêm Khách Hàng</h1>

<h4>Thông tin khách hàng</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Name -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Nhập họ và tên" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Phone -->
            <div class="form-group mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Dob -->
            <div class="form-group mb-3">
                <label asp-for="Dob" class="form-label"></label>
                <input asp-for="Dob" type="date" class="form-control" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>

            <!-- Demographics -->
            <div class="form-group mb-3">
                <label asp-for="Demographics" class="form-label"></label>
                <input asp-for="Demographics" class="form-control" placeholder="Nhập thông tin nhân khẩu học" />
                <span asp-validation-for="Demographics" class="text-danger"></span>
            </div>

            <!-- Preferences -->
            <div class="form-group mb-3">
                <label asp-for="Preferences" class="form-label"></label>
                <input asp-for="Preferences" class="form-control" placeholder="Nhập sở thích" />
                <span asp-validation-for="Preferences" class="text-danger"></span>
            </div>

            <!-- Search History -->
            <div class="form-group mb-3">
                <label asp-for="SearchHistory" class="form-label"></label>
                <input asp-for="SearchHistory" class="form-control" placeholder="Nhập lịch sử tìm kiếm" />
                <span asp-validation-for="SearchHistory" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-success">Tạo mới</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
