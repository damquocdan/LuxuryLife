@model LuxuryLife.Models.Customer

@{
    ViewData["Title"] = "Chi tiết";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Thông tin khách hàng</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Tên</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 font-weight-bold">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 font-weight-bold">Mật khẩu</dt>
                <dd class="col-sm-9 text-muted">@Html.DisplayFor(model => model.Password)</dd>

                <dt class="col-sm-3 font-weight-bold">Số điện thoại</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                <dt class="col-sm-3 font-weight-bold">Ảnh đại diện</dt>
                <dd class="col-sm-9">
                    <img src="@Model.Avatar" alt="Ảnh đại diện" class="img-thumbnail" style="max-width: 150px;">
                </dd>

                <dt class="col-sm-3 font-weight-bold">Địa chỉ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-3 font-weight-bold">Ngày sinh</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Dob)</dd>

                <dt class="col-sm-3 font-weight-bold">Thông tin dân số</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Demographics)</dd>

                <dt class="col-sm-3 font-weight-bold">Sở thích</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Preferences)</dd>

                <dt class="col-sm-3 font-weight-bold">Lịch sử tìm kiếm</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SearchHistory)</dd>

                <dt class="col-sm-3 font-weight-bold">Ngày tạo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Createdate)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model?.CustomerId" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
