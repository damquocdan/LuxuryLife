@model LuxuryLife.Models.Customer

@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1 class="mt-3">Chi tiết khách hàng</h1>

<div>
    <h4>Thông tin khách hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Họ và tên
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-3">
            Email
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-3">
            Mật khẩu
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt class="col-sm-3">
            Số điện thoại
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt class="col-sm-3">
            Địa chỉ
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="col-sm-3">
            Ngày sinh
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Dob)
        </dd>

        <dt class="col-sm-3">
            Nhân khẩu học
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Demographics)
        </dd>

        <dt class="col-sm-3">
            Sở thích
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Preferences)
        </dd>

        <dt class="col-sm-3">
            Lịch sử tìm kiếm
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.SearchHistory)
        </dd>

        <dt class="col-sm-3">
            Ngày tạo
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.CustomerId" class="btn btn-primary">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
