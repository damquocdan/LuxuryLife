@model LuxuryLife.Models.Customer

@{
    ViewData["Title"] = "Tạo mới";
}

<h1>Tạo mới</h1>
<hr />
<div class="row">
    <div class="col-md-8 m-auto">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="Name" class="col-md-4 col-form-label ">Tên</label>
                <div class="col-md-8">
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Email" class="col-md-4 col-form-label ">Email</label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Password" class="col-md-4 col-form-label ">Mật khẩu</label>
                <div class="col-md-8">
                    <input asp-for="Password" class="form-control" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Phone" class="col-md-4 col-form-label ">Số điện thoại</label>
                <div class="col-md-8">
                    <input asp-for="Phone" class="form-control" required />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Avatar" class="col-md-4 col-form-label ">Ảnh đại diện</label>
                <div class="col-md-8">
                    <input asp-for="Avatar" type="file" class="form-control" required />
                    <span asp-validation-for="Avatar" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Address" class="col-md-4 col-form-label" >Địa chỉ</label>
                <div class="col-md-8">
                    <input asp-for="Address" class="form-control" required />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Dob" class="col-md-4 col-form-label ">Ngày sinh</label>
                <div class="col-md-8">
                    <input asp-for="Dob" class="form-control"  required/>
                    <span asp-validation-for="Dob" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-9 offset-md-3">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Đóng</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
