@model LuxuryLife.Models.Customer

@{
    ViewData["Title"] = "Tạo mới";
}
<style>
    .create-customer-container {
        background-color: #1b1e20;
        color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        position: relative;
    }

        .create-customer-container h1 {
            font-size: 28px;
            margin-bottom: 20px;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .create-customer-container h1 i {
                margin-right: 8px;
                color: #ff545a;
            }

    .form-group label {
        font-weight: bold;
        display: flex;
        align-items: center;
    }

        .form-group label i {
            margin-right: 8px;
            color: #ff545a;
        }

    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
    }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: #ff545a;
            box-shadow: 0 0 0 0.2rem rgba(255, 84, 90, 0.25);
        }

    .create-btn, .close-btn {
        background-color: #ff545a;
        border: none;
        transition: background-color 0.3s ease;
    }

        .create-btn:hover, .close-btn:hover {
            background-color: #d64045;
        }

    .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 5px 10px;
    }
</style>
<div class="create-customer-container">
    <div class="header">
        <h1><i class="fas fa-user-plus"></i> Tạo mới khách hàng</h1>
        <button class="close-btn" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="Name" class="col-md-4 col-form-label"><i class="fas fa-user"></i> Tên</label>
                    <div class="col-md-8">
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Email" class="col-md-4 col-form-label"><i class="fas fa-envelope"></i> Email</label>
                    <div class="col-md-8">
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Password" class="col-md-4 col-form-label"><i class="fas fa-lock"></i> Mật khẩu</label>
                    <div class="col-md-8">
                        <input asp-for="Password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Phone" class="col-md-4 col-form-label"><i class="fas fa-phone"></i> Số điện thoại</label>
                    <div class="col-md-8">
                        <input asp-for="Phone" class="form-control" required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Avatar" class="col-md-4 col-form-label"><i class="fas fa-image"></i> Ảnh đại diện</label>
                    <div class="col-md-8">
                        <input asp-for="Avatar" type="file" class="form-control" required />
                        <span asp-validation-for="Avatar" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Address" class="col-md-4 col-form-label"><i class="fas fa-map-marker-alt"></i> Địa chỉ</label>
                    <div class="col-md-8">
                        <input asp-for="Address" class="form-control" required />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Dob" class="col-md-4 col-form-label"><i class="fas fa-calendar-alt"></i> Ngày sinh</label>
                    <div class="col-md-8">
                        <input asp-for="Dob" class="form-control" required />
                        <span asp-validation-for="Dob" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-8 offset-md-4">
                        <input type="submit" value="Tạo mới" class="btn btn-primary create-btn" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary close-btn">Đóng</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function closeDetailSection() {
            window.location.href = '@Url.Action("Index", "Customers")';
        }
    </script>
}