@model LuxuryLife.Models.Homestay

@{
    ViewData["Title"] = "Chi tiết Homestay";
}
<style>
    .homestay-details-container {
        background-color: #1b1e20;
        color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        position: relative;
    }

    .homestay-details-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .homestay-details-header h1 {
            font-size: 2.5rem;
            color: #ff545a;
            margin: 0;
        }

    .close-btn {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        transition: color 0.3s ease;
    }

        .close-btn:hover {
            color: #ff545a;
        }

    .divider {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
    }

    .homestay-details {
        background-color: #343a40;
        padding: 20px;
        border-radius: 5px;
    }

    .detail-dt {
        font-weight: bold;
        color: #ff545a;
        display: flex;
        align-items: center;
    }

        .detail-dt i {
            margin-right: 8px;
        }

    .detail-dd {
        background-color: rgba(255, 255, 255, 0.05);
        padding: 8px;
        border-radius: 5px;
    }

    .homestay-image {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
    }

    .actions {
        margin-top: 20px;
    }

    .btn-secondary {
        padding: 12px 25px;
        font-size: 1rem;
        border-radius: 5px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-secondary {
        background-color: #343a40;
        border-color: #343a40;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #495057;
            border-color: #495057;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

    .btn-close i {
        margin-right: 5px;
    }
</style>
<div class="homestay-details-container">
    <div class="homestay-details-header">
        <h1 class="text-center"><i class="fas fa-home"></i> @ViewData["Title"]</h1>
        <button type="button" class="close-btn" onclick="closeDetailSection()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <hr class="divider" />

    <div class="homestay-details">
        <dl class="row">
            <dt class="col-sm-4 detail-dt">
                <i class="fas fa-signature me-2"></i> @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-8 detail-dd">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-4 detail-dt">
                <i class="fas fa-file-alt me-2"></i> @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-8 detail-dd">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-4 detail-dt">
                <i class="fas fa-map-marker-alt me-2"></i> @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-8 detail-dd">
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt class="col-sm-4 detail-dt">
                <i class="fas fa-image me-2"></i> @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-8 detail-dd">
                <img src="@Model.Image" alt="@Model.Name" class=""width="300px" height="200px" />
            </dd>

            <dt class="col-sm-4 detail-dt">
                <i class="fas fa-dollar-sign me-2"></i> @Html.DisplayNameFor(model => model.PricePerNight)
            </dt>
            <dd class="col-sm-8 detail-dd">
                @Html.DisplayFor(model => model.PricePerNight)
            </dd>
        </dl>
    </div>

  
</div>

@section Scripts {
    <script>
        function closeDetailSection() {
            window.location.href = "@Url.Action("Index", "Homestay")";
        }
    </script>
}