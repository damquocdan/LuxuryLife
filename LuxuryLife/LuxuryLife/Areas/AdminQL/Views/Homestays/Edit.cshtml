@model LuxuryLife.Models.Homestay

@{
    ViewData["Title"] = "Chỉnh Sửa Homestay";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1 class="text-primary">Chỉnh Sửa Homestay</h1>

<h4>Thông Tin Homestay</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HomestayId" />

            <!-- Tên Homestay -->
            <div class="form-group">
                <label asp-for="Name" class="form-label">Tên Homestay</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên homestay" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Mô Tả -->
            <div class="form-group">
                <label asp-for="Description" class="form-label">Mô Tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Địa Chỉ -->
            <div class="form-group">
                <label asp-for="Address" class="form-label">Địa Chỉ</label>
                <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Hình Ảnh -->
            <div class="form-group">
                <label asp-for="Image" class="form-label">Hình Ảnh</label>
                <input asp-for="Image" class="form-control" placeholder="URL hình ảnh" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- Giá Mỗi Đêm -->
            <div class="form-group">
                <label asp-for="PricePerNight" class="form-label">Giá Mỗi Đêm (VND)</label>
                <input asp-for="PricePerNight" class="form-control" placeholder="Nhập giá mỗi đêm" />
                <span asp-validation-for="PricePerNight" class="text-danger"></span>
            </div>

            <!-- Nút Lưu -->
            <div class="form-group mt-3">
                <input type="submit" value="Lưu Thay Đổi" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
