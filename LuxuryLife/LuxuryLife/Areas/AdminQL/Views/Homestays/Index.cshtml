@model IEnumerable<LuxuryLife.Models.Homestay>

@{
    ViewData["Title"] = "Danh Sách Homestay";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1 class="text-primary">Danh Sách Homestay</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Thêm Homestay Mới</a> <!-- Thêm Homestay Mới -->
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayName("Tên Homestay")</th> <!-- Tên Homestay -->
            <th>@Html.DisplayName("Mô Tả")</th> <!-- Mô Tả -->
            <th>@Html.DisplayName("Địa Chỉ")</th> <!-- Địa Chỉ -->
            <th>@Html.DisplayName("Hình Ảnh")</th> <!-- Hình Ảnh -->
            <th>@Html.DisplayName("Giá Mỗi Đêm (VND)")</th> <!-- Giá Mỗi Đêm -->
            <th class="text-center">Thao Tác</th> <!-- Thao Tác -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>
                    <img src="@item.Image" alt="@item.Name" class="img-thumbnail" style="max-width: 100px;" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.PricePerNight)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.HomestayId" class="btn btn-warning btn-sm">Sửa</a> <!-- Sửa -->
                    <a asp-action="Details" asp-route-id="@item.HomestayId" class="btn btn-info btn-sm">Chi Tiết</a> <!-- Chi Tiết -->
                    <a asp-action="Delete" asp-route-id="@item.HomestayId" class="btn btn-danger btn-sm">Xóa</a> <!-- Xóa -->
                </td>
            </tr>
        }
    </tbody>
</table>
