@model LuxuryLife.Models.Homestay

@{
    ViewData["Title"] = "Chi Tiết Homestay";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1 class="text-primary">Chi Tiết Homestay</h1>

<div class="card shadow-sm p-4 mt-3">
    <h4 class="text-secondary">Thông Tin Homestay</h4>
    <hr />
    <dl class="row">
        <!-- Tên Homestay -->
        <dt class="col-sm-3 fw-bold text-secondary">
            Tên Homestay
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <!-- Mô Tả -->
        <dt class="col-sm-3 fw-bold text-secondary">
            Mô Tả
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <!-- Địa Chỉ -->
        <dt class="col-sm-3 fw-bold text-secondary">
            Địa Chỉ
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <!-- Hình Ảnh -->
        <dt class="col-sm-3 fw-bold text-secondary">
            Hình Ảnh
        </dt>
        <dd class="col-sm-9">
            <img src="@Model.Image" alt="Hình ảnh homestay" class="img-fluid rounded shadow-sm" style="max-width: 200px;" />
        </dd>

        <!-- Giá Mỗi Đêm -->
        <dt class="col-sm-3 fw-bold text-secondary">
            Giá Mỗi Đêm (VND)
        </dt>
        <dd class="col-sm-9">
            @Model.PricePerNight .VND
        </dd>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.HomestayId" class="btn btn-warning">Chỉnh Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
</div>
