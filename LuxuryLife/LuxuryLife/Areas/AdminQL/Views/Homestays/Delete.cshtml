@model LuxuryLife.Models.Homestay

@{
    ViewData["Title"] = "Xóa Homestay";
}

<h1>Xóa Homestay</h1>

<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <h4>Thông Tin Homestay</h4>
    <hr />
    <dl class="row">
        <!-- Tên Homestay -->
        <dt class="col-sm-2">
            Tên Homestay
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <!-- Mô Tả -->
        <dt class="col-sm-2">
            Mô Tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <!-- Vị Trí -->
        <dt class="col-sm-2">
            Vị Trí
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>

        <!-- Giá Mỗi Đêm -->
        <dt class="col-sm-2">
            Giá Mỗi Đêm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PricePerNight)
        </dd>

        <!-- Tình Trạng -->
        <dt class="col-sm-2">
            Tình Trạng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Availability)
        </dd>

        <!-- Đánh Giá -->
        <dt class="col-sm-2">
            Đánh Giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>

        <!-- Ngày Tạo -->
        <dt class="col-sm-2">
            Ngày Tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>

        <!-- Nhà Cung Cấp -->
        <dt class="col-sm-2">
            Nhà Cung Cấp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Provider.ProviderId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="HomestayId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>
