<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LuxuryLife</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LuxuryLife.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        #dropdown_menu {
            display: none;
            position: absolute;
            right: 0;
            background-color: white;
            border: 1px solid #ccc;
            padding: 10px 0;
        }

        .user:hover #dropdown_menu {
            display: block;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4e/HUNRE_Logo.png/768px-HUNRE_Logo.png" width="100" title="logo" />
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto ms-3 ps-0 mt-0 d-flex align-items-center">
                        <li class="nav-item ">
                            <a class="nav-link a-title position-relative" style="font-size:1.3rem; font-weight:500; color:green" asp-area="StudentUser" asp-controller="Dashboard" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link a-title position-relative" style="font-size:1.3rem; font-weight:500; color:green" asp-area="StudentUser" asp-controller="Dashboard" asp-action="Aboutus">Về kí túc xá</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link a-title position-relative" style="font-size:1.3rem; font-weight:500; color:green" asp-area="StudentUser" asp-controller="News" asp-action="Index">Tin tức</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link a-title position-relative" style="font-size:1.3rem; font-weight:500; color:green" asp-area="StudentUser" asp-controller="Dashboard" asp-action="Service" asp-route-id="@Context.Session.GetInt32("StudentId")">Dịch vụ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link a-title position-relative" style="font-size:1.3rem; font-weight:500; color:green" asp-area="StudentUser" asp-controller="Dashboard" asp-action="Contact">Liên hệ</a>
                        </li>
                    </ul>
                    <div class="">
                        <div class="user">
                            <button id="button_user" type="button" class="border-0">
                                <i class="fa-regular fa-user fa-2xl" style="color: #63E6BE;"></i>
                            </button>
                            <ul id="dropdown_menu" class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="CustomerUser" asp-controller="Customers" asp-action="Details" asp-route-customerId="@Context.Session.GetInt32("CustomerId")">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" asp-area="CustomerUser" asp-controller="Login" asp-action="Logout">Đăng xuất</a></li>
                            </ul>
                        </div>
                    </div>


                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - LuxuryLife - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
