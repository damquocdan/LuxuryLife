@model LuxuryLife.Models.Favourite
<style>
    /* Thiết lập màu sắc chủ đạo */
:root {
    --primary-color: #FF545A;
    --text-color: #333;
    --background-color: #fff;
    --button-color: #FF545A;
    --button-hover-color: #e0454d;
    --border-color: #ddd;
}

/* Cấu trúc chung của giao diện */
.cart-checkout-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    background-color: var(--background-color);
}

/* Tiêu đề */
.cart-checkout-header .cart-checkout-container {
    margin-bottom: 30px;
    text-align: center;
}

.cart-checkout-header .heading-small {
    font-size: 24px;
    font-weight: 600;
    color: var(--primary-color);
    border-bottom: 2px solid var(--primary-color);
    display: inline-block;
    padding-bottom: 10px;
}

/* Phần tổng quan chi tiết */

/* Nút "Đặt" */
.cart-checkout-submit {
    background-color: var(--button-color);
    color: #fff;
    font-size: 18px;
    font-weight: 600;
    text-transform: uppercase;
    padding: 15px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s;
    width: 100%;
}

.cart-checkout-submit:hover {
    background-color: var(--button-hover-color);
}

/* Responsive */
</style>
<div class="cart-checkout-header">
    <div class="cart-checkout-container">
        <h4 class="heading-small">Chi tiết</h4>
    </div>
</div>
<div class="cart-checkout-container">
    <div class="cart-checkout-bottom">
        <img src="@Model.Tour.Image" alt="@Model.Tour.Name" width="100%" />
            <h3>@Model.Tour.Name</h3>
            <p>@Model.Tour.Description</p>
            
            <h3>@string.Format("{0:C}", Model.Tour.Price)</h3>
        <a class="cart-checkout-submit full">
            Đặt
        </a>
        <a asp-controller="Tours" asp-action="Details" asp-route-id="@Model?.TourId">Xem trực tiếp</a>
    </div>
</div>
