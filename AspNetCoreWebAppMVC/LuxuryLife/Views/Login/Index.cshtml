@model LuxuryLife.Models.Login
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<br />
<h1 class="text-primary text-center">Đăng nhập</h1>
<div class="d-flex justify-content-center" style="justify-content:center !important; display:flex !important;">
    <div class="row" style="margin-top:50px">
        <div class="">
            <!-- Hiển thị lỗi -->

            <!-- Form -->
            <form asp-action="Index" method="post">
                <!-- Email -->
                <div class="form-group mb-4">
                    <label for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" id="Email" class="form-control" placeholder="Nhập email của bạn" required />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Mật khẩu -->
                <div class="form-group mb-4">
                    <label for="Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Password" type="password" id="Password" class="form-control" placeholder="Nhập mật khẩu" required />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- Nút đăng nhập -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg w-60" style=" border: 1px solid Black; transition: background-color 0.3s;">
                        Đăng nhập
                    </button>
                </div>

                <!-- Đăng ký -->
                <p class="text-center text-muted mt-3 small">
                    Bạn chưa có tài khoản?
                    <a asp-controller="Customers" asp-action="Create" class="text-primary text-decoration-none">Đăng ký</a>
                </p>
            </form>
        </div>
    </div>
</div>

