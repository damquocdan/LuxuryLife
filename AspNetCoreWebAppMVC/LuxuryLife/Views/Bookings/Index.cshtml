@model IEnumerable<LuxuryLife.Models.Booking>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/CustomerUser/Views/Shared/_Customer.cshtml";
}
<style>
    .table {
        width: 70%;
        margin: auto;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #4CAF50;
            color: white;
        }

        .table td {
            background-color: #f9f9f9;
        }

        /* Hover effect for rows */
        .table tr:hover {
            background-color: #f1f1f1;
        }

        /* Styling for the action link */
        .table a {
            color: #4CAF50;
            text-decoration: none;
            font-weight: bold;
        }

            .table a:hover {
                text-decoration: underline;
                color: #45a049;
            }

</style>
<div class="row">
    <div class="col-md-12">
        <h1 class="text-center m-auto">Danh sách các tour du lịch đã đặt</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BookingDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CheckInDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CheckOutDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tour)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CheckInDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CheckOutDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tour.Name)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.BookingId">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
