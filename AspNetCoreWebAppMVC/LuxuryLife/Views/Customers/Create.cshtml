@model LuxuryLife.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<br />
<h1 class="text-primary text-center">Đăng Ký Tài Khoản</h1>
<p class="text-secondary text-center">Vui lòng điền thông tin để tạo tài khoản mới.</p>
<div class="d-flex justify-content-center" style="justify-content:center !important; display:flex !important;">
    <div class="row" style="margin-top:50px">
        <div class="">
            <form asp-action="Create" class="border p-4 shadow-sm rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Tên -->
                <div class="form-group row mb-3">
                    <label asp-for="Name" class="control-label col-md-4">Tên</label>
                    <div class="col-md-8">
                        <input asp-for="Name" class="form-control" placeholder="Nhập tên của bạn" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <!-- Email -->
                <div class="form-group row mb-3">
                    <label asp-for="Email" class="control-label col-md-4">Email</label>
                    <div class="col-md-8">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email của bạn" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <!-- Mật khẩu -->
                <div class="form-group row mb-3">
                    <label asp-for="Password" class="control-label col-md-4">Mật khẩu</label>
                    <div class="col-md-8">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu của bạn" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <!-- Xác nhận mật khẩu -->
                <div class="form-group row mb-3">
                    <label for="confirmPassword" class="control-label col-md-4">Xác nhận mật khẩu</label>
                    <div class="col-md-8">
                        <input type="password" id="confirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" oninput="checkPasswordMatch()" />
                        <small id="passwordError" class="text-danger" style="display:none;">Mật khẩu không khớp!</small>
                    </div>
                </div>

                <!-- Số điện thoại -->
                <div class="form-group row mb-3">
                    <label asp-for="Phone" class="control-label col-md-4">Số điện thoại</label>
                    <div class="col-md-8">
                        <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại của bạn" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <!-- Ngày sinh -->
                <div class="form-group row mb-3">
                    <label asp-for="Dob" class="control-label col-md-4">Ngày sinh</label>
                    <div class="col-md-8">
                        <input asp-for="Dob" type="date" class="form-control" />
                        <span asp-validation-for="Dob" class="text-danger"></span>
                    </div>
                </div>

                <!-- Nút Đăng ký -->
                <div class="form-group text-center">
                    <input type="submit" value="Đăng Ký" class="btn btn-primary w-100" />
                </div>

                <!-- Đường dẫn quay lại đăng nhập -->
                <div class="text-center mt-3">
                    <p>Bạn đã có tài khoản? <a asp-area="CustomerUser" asp-controller="Login" asp-action="Index" class="text-primary">Đăng nhập</a></p>
                </div>
            </form> git

        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    function checkPasswordMatch() {
        const password = document.getElementById("password").value;
        const confirmPassword = document.getElementById("confirmPassword").value;
        const error = document.getElementById("passwordError");
        error.style.display = password === confirmPassword ? "none" : "block";
    }
</script>