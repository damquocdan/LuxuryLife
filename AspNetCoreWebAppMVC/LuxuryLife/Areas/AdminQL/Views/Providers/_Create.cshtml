@model LuxuryLife.Models.Provider

@{
    ViewData["Title"] = "Tạo mới nhà cung cấp";
}

<h1>Tạo mới</h1>

<h4>Nhà cung cấp</h4>
<hr />
<div class="row">
    <div class="">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Name Field -->
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-4 col-form-label">Tên</label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <!-- Email Field -->
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <!-- Password Field -->
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-4 col-form-label">Mật khẩu</label>
                <div class="col-sm-8">
                    <input asp-for="Password" class="form-control" type="password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <!-- Avatar Field -->
            <div class="form-group row">
                <label asp-for="Avatar" class="col-sm-4 col-form-label">Hình đại diện</label>
                <div class="col-sm-8">
                    <input asp-for="Avatar" class="form-control" type="file"  required/>
                    <span asp-validation-for="Avatar" class="text-danger"></span>
                </div>
            </div>

            <!-- Phone Field -->
            <div class="form-group row">
                <label asp-for="Phone" class="col-sm-4 col-form-label">Số điện thoại</label>
                <div class="col-sm-8">
                    <input asp-for="Phone" class="form-control" required />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <!-- Address Field -->
            <div class="form-group row">
                <label asp-for="Address" class="col-sm-4 col-form-label">Địa chỉ</label>
                <div class="col-sm-8">
                    <input asp-for="Address" class="form-control" required />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <!-- Rating Field -->
            <div class="form-group row" hidden>
                <label asp-for="Rating" class="col-sm-4 col-form-label">Đánh giá</label>
                <div class="col-sm-8">
                    <input asp-for="Rating" class="form-control" type="number" step="0.1" min="0" max="5" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group row">
                <div class="col-sm-4"></div>
                <div class="col-sm-8">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Đóng</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
