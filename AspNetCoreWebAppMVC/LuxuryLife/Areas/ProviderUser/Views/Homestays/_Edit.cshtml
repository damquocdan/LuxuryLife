@model LuxuryLife.Models.Homestay

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa thông tin Homestay</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HomestayId" />

            <!-- Name Field -->
            <div class="form-group row">
                <label asp-for="Name" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <!-- Description Field -->
            <div class="form-group row">
                <label asp-for="Description" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <!-- Address Field -->
            <div class="form-group row">
                <label asp-for="Address" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <!-- Image Field -->
            <div class="form-group row">
                <label asp-for="Image" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Model.Image" alt="Avatar" width="150px" height="150px" class="mb-2" />
                    }
                    <input asp-for="Image" type="file" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>

            <!-- PricePerNight Field -->
            <div class="form-group row">
                <label asp-for="PricePerNight" class="col-md-3 col-form-label"></label>
                <div class="col-md-9">
                    <input asp-for="PricePerNight" type="number" class="form-control" />
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>
            </div>

            <!-- Hidden ProviderId -->
            <input asp-for="ProviderId" type="hidden" value="@ViewData["ProviderId"]" />

            <!-- Submit Button -->
            <div class="form-group row">
                <div class="col-md-9 offset-md-3">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Đóng</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
