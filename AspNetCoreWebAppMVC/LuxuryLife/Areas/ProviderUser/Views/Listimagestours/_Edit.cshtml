@model LuxuryLife.Models.Listimagestour

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa hình ảnh của tour</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ListimagestourId" />

            <!-- TourId -->
            <div class="form-group row">
                <label asp-for="TourId" class="col-md-4 col-form-label text-md-right"></label>
                <div class="col-md-8">
                    <select asp-for="TourId" class="form-control" asp-items="ViewBag.TourId"></select>
                    <span asp-validation-for="TourId" class="text-danger"></span>
                </div>
            </div>

            <!-- ImageUrl -->
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-4 col-form-label text-md-right"></label>
                <div class="col-md-8">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Avatar" width="150px" height="150px" class="mb-2" />
                    }
                    <input asp-for="ImageUrl" type="file" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <!-- ImageDescription -->
            <div class="form-group row">
                <label asp-for="ImageDescription" class="col-md-4 col-form-label text-md-right"></label>
                <div class="col-md-8">
                    <input asp-for="ImageDescription" class="form-control" />
                    <span asp-validation-for="ImageDescription" class="text-danger"></span>
                </div>
            </div>

            <!-- Createdate -->
            <div class="form-group row">
                <label asp-for="Createdate" class="col-md-4 col-form-label text-md-right"></label>
                <div class="col-md-8">
                    <input asp-for="Createdate" class="form-control" />
                    <span asp-validation-for="Createdate" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group row">
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Đóng</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
